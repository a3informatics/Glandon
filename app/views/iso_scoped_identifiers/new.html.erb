<h3>New Scoped identifier</h3>
<div class="col-md-3">
	<%= form_for @scopedIdentifier do |f| %>
	  	<div class="form-group">
		    <%= f.label :identifier, "identifier:" %><br/>
		    <%= f.text_field :identifier, class: "form-control" %>
		</div>
		<div class="form-group">
		    <%= f.label :versionLabel, "Version Label:" %><br/>
		    <%= f.text_field :versionLabel, class: "form-control" %>
		</div>
		<div class="form-group">
		    <%= f.label :version, "Internal Version:" %><br/>
		    <%= f.text_field :version, class: "form-control" %>
		</div>
	    <div class="form-group">
    		<%= label_tag :namespaceId, "Namespace:" %><br/>
        	<%= select_tag("iso_scoped_identifier[namespaceId]", options_for_select(@namespaces)) %>
        </div><br/>  
		<%= f.submit "Create", class: "btn btn-default btn-primary" %>
	<% end %>
</div>