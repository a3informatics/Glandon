<h1>Domain</h1>
<div class="col-md-10">
	<h2>Details</h2>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
	  		<tr>
	    		<th>Identifer</th>
	    		<th>Internal Version</th>
	    		<th>Version Label</th>
	  		</tr>
		</thead>
		<tbody>
	  		<tr>
	    		<td><%= @domain.identifier %></td>
	    		<td><%= @domain.version %></td>
	    		<td><%= @domain.versionLabel %></td>
	  		</tr>
		</tbody>
	</table>
	<h2>Variables</h2>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
		  		<th>Ordinal</th>
		    	<th>Name</th>
		    	<th>Label</th>
		   		<th>Description</th>
		    	<th>Datatype</th>
		    	<th>Role</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @domain.variables.each do |key, variable| %>
		  	<tr>
		    	<td><%= variable.ordinal %></td>
			    <td><%= variable.name %></td>
		    	<td><%= variable.label %></td>
			    <td><%= variable.description %></td>
			    <td><%= variable.datatype %></td>
			    <td><%= variable.role %></td>
			    <td><%= link_to "Show", domains_variable_path(:id => variable.id, :namespace => CGI::escape(variable.namespace)), :class => "btn btn-primary" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
