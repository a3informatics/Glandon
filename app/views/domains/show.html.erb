<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @domain} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
	  		<tr>
	    		<th>Identifer</th>
	    		<th>Label</th>
	    		<th>Owner</th>
	    		<th>Internal Version</th>
	    		<th>Version</th>
	  		</tr>
		</thead>
		<tbody>
	  		<tr>
	    		<td><%= @domain.identifier %></td>
			    <td><%= @domain.label %></td>
			    <td><%= @domain.owner %></td>
			    <td><%= @domain.version %></td>
			    <td><%= @domain.versionLabel %></td>
	  		</tr>
		</tbody>
	</table>
	<h4>Variables</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
		  		<th>Ordinal</th>
		    	<th>Name</th>
		    	<th>Label</th>
		   		<th>Description</th>
		    	<th>Datatype</th>
		    	<th>Role</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @domain.variables.each do |key, variable| %>
		  	<tr>
		    	<td><%= variable.ordinal %></td>
			    <td><%= variable.name %></td>
		    	<td><%= variable.label %></td>
			    <td><%= variable.description %></td>
			    <td><%= variable.datatype %></td>
			    <td><%= variable.role %></td>
			    <td><%= link_to "Show", domains_variable_path(:id => variable.id, :namespace => CGI::escape(variable.namespace)), :class => "btn btn-primary btn-xs" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
	<h4>Biomedical Concepts</h4>
	<table id="secondary" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
		  		<th>Identifer</th>
			    <th>Label</th>
			    <th>Owner</th>
			    <th>Version</th>
			    <th>Version Label</th>
		  	</tr>
		</thead>
		<tbody>
			<% @domain.bcs.each do |key, bc| %>
				<tr>
		    		<td><%= bc.identifier %></td>
	    			<td><%= bc.label %></td>
	    			<td><%= bc.owner %></td>
	    			<td><%= bc.version %></td>
	    			<td><%= bc.versionLabel %></td>
		  		</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "Add Biomedical Concepts", add_domains_path(:id => @domain.id, :namespace => @domain.namespace), :class => "btn btn-success" %>
	<%= link_to "Remove Biomedical Concepts", remove_domains_path(:id => @domain.id, :namespace => @domain.namespace), :class => "btn btn-danger" %>
</div>
