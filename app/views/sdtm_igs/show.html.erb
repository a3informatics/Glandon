<%= javascript_include_tag 'standard_datatable' %>
<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @sdtm_ig} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
	  <tr>
	    <th>Identifer</th>
	    <th>Label</th>
	    <th>Owner</th>
	    <th>Internal Version</th>
	    <th>Version</th>
	  </tr>
		</thead>
		<tbody>
	  <tr>
	    <td><%= @sdtm_ig.identifier %></td>
	    <td><%= @sdtm_ig.label %></td>
	    <td><%= @sdtm_ig.owner %></td>
	    <td><%= @sdtm_ig.version %></td>
	    <td><%= @sdtm_ig.versionLabel %></td>
	  </tr>
	</tbody>
	</table>
	<h4>Domains</h4>
	<table id="secondary" class="table table-striped table-bordered table-condensed">
	  	<thead>
	  		<tr>
	    		<th>Identifer</th>
	    		<th>Label</th>
	    		<th>Owner</th>
	    		<th>Internal Version</th>
	    		<th>Version</th>
	    		<th></th>
	  		</tr>
		</thead>
		<tbody>
	  	<% @sdtm_ig_domains.each do |item| %>
		  	<tr>
	    		<td><%= item.identifier %></td>
			    <td><%= item.label %></td>
			    <td><%= item.owner %></td>
			    <td><%= item.version %></td>
			    <td><%= item.versionLabel %></td>
	    		<td><%= link_to "Show", sdtm_ig_domain_path(:id => item.id, :sdtm_ig_domain => { :namespace => item.namespace }), :class => "btn btn-primary btn-xs" %></td>
	  		</tr>
	  		<% end %>
		</tbody>
	</table>
	<%= link_to "Export JSON", export_json_sdtm_ig_path(:id => @sdtm_ig.id, :sdtm_ig => { :namespace => @sdtm_ig.namespace }), :class => "btn btn-info" %>
	<%= link_to "Export Turtle", export_ttl_sdtm_ig_path(:id => @sdtm_ig.id, :sdtm_ig => { :namespace => @sdtm_ig.namespace }), :class => "btn btn-info" %>
	<br/><br/>
</div>
