<div class="container">
	<h1>CDISC Code List Item: <%= @cdiscCl.identifier %> (V<%= @cdiscTerm.version %>, <%= @cdiscTerm.date %>)</h1>
  <div class="row">
    <div class="col-md-9">
			<h2>Details</h2>
			<table class="table table-striped table-bordered table-condensed">
			  <thead>
					<tr>
				    <th>Identifer</th>
				    <th>Notation</th>
				    <th>Preferred</th>
				    <th>Synonym</th>
				    <th>Extensible</th>
				    <th>Definition</th>
				  </tr>
				</thead>
				<tbody>
				  <tr>
				    <td><%= @cdiscCl.identifier %></td>
				    <td><%= @cdiscCl.notation %></td>
				    <td><%= @cdiscCl.preferredTerm %></td>
				    <td><%= @cdiscCl.synonym %></td>
				    <td><%= @cdiscCl.extensible %></td>
				    <td><%= @cdiscCl.definition %></td>
				  </tr>
				</tbody>
			</table>
			<h2>Code List Items</h2>
			<table class="table table-striped table-bordered table-condensed">
			  <thead>
					<tr>
				    <th>Identifer</th>
				    <th>Notation</th>
				    <th>Preferred</th>
				    <th>Synonym</th>
				    <th>Definition</th>
				    <th>View</th>
			  	</tr>
				</thead>
				<tbody>
					<% @cdiscClis.each do |cli| %>
					  <tr>
					    <td><%= cli.identifier %></td>
					    <td><%= cli.notation %></td>
					    <td><%= cli.preferredTerm %></td>
					    <td><%= cli.synonym %></td>
					    <td><%= cli.definition %></td>
					    <td><%= link_to "Show", cdisc_cli_path(:id => cli.id,:termId => @cdiscTerm.id), :class => "btn btn-primary" %></td>
					  </tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">Compare with Previous Version</div>
				<div class="panel-body">
					<table class="table table-striped table-bordered table-condensed">
			  		<tr>
					    <th>Version</th>
					    <th>Date</th>
					  </tr>
						<% @cdiscTerms.each do |ct| %>
						  <tr>
						    <td><%= link_to "V" + ct.version.to_s , compare_cdisc_cls_path(:id => @cdiscCl.id, :new => @cdiscTerm.id, :old => ct.id), :class => "btn btn-info" %></td>
						    <td><%= ct.date %></td>
						  </tr>
						<% end %>
					</table>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">Get History</div>
				<div class="panel-body">
					<%= link_to "History", history_cdisc_cls_path(:id => @cdiscCl.id, :new => @cdiscTerm.id) , :class => "btn btn-info" %>
				</div>
			</div>
		</div>
	</div>
</div>
