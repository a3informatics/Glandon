<%= stylesheet_link_tag    'd3_tree'%>
<%= javascript_include_tag 'd3_tree', 'd3_editor', 'iso_managed_tag_edit', 'iso_managed_tag_list' %>
<script id="jsonData" type="text/json">
    <%= raw @concept_systems.to_json %>
</script>
<div class="row">
    <div class="col-md-7">
        <%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Edit Tags:", :item => @iso_managed} %>
        <div style="height: 800px;" id="d3">
            <!-- D3 Area -->
        </div>
    </div>
  <div class="col-md-5" >
    <br/>
    <%= render partial: "shared/isoManagedInfo"%>
    <div id="iso_managed_tag_panel" class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Tag List</h3>
        </div>
        <div class="panel-body">
          <table id="iso_managed_tag_table" class="table table-striped table-bordered"  cellspacing="0" width="100%">
            <thead>
                <tr> 
                    <th>Tag</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
          <button type="button" id="tag_add" class="btn btn-primary">T+</button>
          <button type="button" id="tag_delete" class="btn btn-primary">T-</button>   
        </div>
    </div>
  </div>
  <input type="hidden" id="id" value="<%= @iso_managed.id %>">
  <input type="hidden" id="namespace" value="<%= @iso_managed.namespace %>" %> 
</div>