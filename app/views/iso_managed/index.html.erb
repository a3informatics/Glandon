<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Managed Item") %>
<h3>Index: Managed Items</h3>
<div class="col-md-12">
	<div class="panel panel-danger">
		<div class="panel-heading">Warning</div>
		<div class="panel-body">
  		<p>This page lists all the items managed within the system. It also allows any item to be deleted. Use with caution!</p>
		</div>
	</div>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
		  	<tr>
		    	<th>Identifier</th>
			    <th>Label</th>
			    <th>Version</th>
			    <th>Status</th>
			    <th>Owner</th>
			    <th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @managed_items.each do |item| %>
				<tr>
				    <td><%= item[:identifier] %></td>
				    <td><%= item[:label] %></td>
				    <td><%= item[:semantic_version] %></td>
				    <td><%= item[:status] %></td>
				    <td><%= item[:owner] %></td>
				    <td><%= link_to "Delete", iso_managed_path({id: item[:id], iso_managed: {namespace: item[:namespace]}}), :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>