<%= javascript_tag 'setPageTitle("Edit tags")' %>

<%= stylesheet_link_tag 'shared/datatables_loading' %>
<%= javascript_include_tag 'iso_concept_systems/edit_tags', 'iso_managed_tag_list', 'iso_managed_list', 'iso_managed_attributes' %>
<% if Rails.env == "test" || Rails.env == "development" %>
  <%= javascript_include_tag 'rspec_helper' %>
<% end %>
<%= javascript_tag "var conceptSystemId = \"#{@concept_system.id}\";" %>
<%= javascript_tag "var conceptSystemNamespace = \"#{@concept_system.uri.namespace}\";" %>
<%= javascript_tag "var isoManagedId = \"#{@iso_concept.id}\";" %>
<%= javascript_tag "var isoManagedNamespace = \"#{@iso_concept.uri.namespace}\";" %>
<%# third_level_breadcrumb(@type, @item, @close_path) %>

<div class="row">
    <%= render layout: "shared/header_by_type", :locals => {item: @item, type: @concept_klass.to_s} do %>
      <div class="actions-wrap">
      <%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
        icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
      </div>
    <% end %>
</div>

<div class="row">
  <div class="col-md-7 card wide">
    <div class="card-header">
      Tags View
    </div>
    <div class="card-content">
        <%= render partial: "shared/iso_concept_systems/tree_viewer"%>
    </div>
  </div>

  <div class="col-md-5 card narrow" id="iso_managed_tag_panel">
      <div class="card-header">
        Item Tags
      </div>
      <div id="tag_panel" class="card-content">
        <div id="tag_panel_spinner" class="loading-overlay">
          <div class="spinner-container">
            <img class="spinner" src="<%= asset_path('processing_medium_2.gif') %>">
          </div>
        </div>
        <div class="tags-container" id="tags_container"></div>

        <div class="well selected-container">
          <div class="tag-display">
            <span><strong>Label: </strong><span id="selected_label" type="text" readonly></span></span>
            <span class="selected-description"><strong>Description: </strong><span id="selected_description" type="text" readonly></span></span>
          </div>
          <button id="tag_add" class="btn tag-add">Add selected tag</button>
        </div>
      </div>
  </div>
</div>

<input type="hidden" id="id" value="<%= @iso_concept.id %>">
<input type="hidden" id="namespace" value="<%= @iso_concept.uri.namespace %>" %>
