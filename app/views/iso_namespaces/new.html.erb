<%= javascript_tag 'setPageTitle("New Namespace")' %>
<% second_level_breadcrumb("Namespaces", iso_namespaces_path, "New") %>
<!-- DEPRECTATED !!! -->
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">New Scope Namespace</h3>
      </div>
      <div class="panel-body">
        <%= form_for @namespace, url: {action: "create"} do |f| %>
           <div class="form-group">
            <%= f.label :short_name, "Short Name:"%><br />
            <%= f.text_field :short_name, autofocus: true , class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :name, "Name:"%><br />
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :authority, "Authority:"%><br />
            <%= f.text_field :authority, autofocus: true , class: "form-control"%>
          </div>
          <%= f.submit "Submit", class: "btn  " %>
          <%= render partial: "shared/close_button", locals: { path: iso_namespaces_path } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
