<%= javascript_tag 'setPageTitle("Namespaces")' %>
<%= javascript_include_tag 'standard_datatable' %>
<% first_level_breadcrumb (id_to_type('iso_namespaces')) %>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">Namespaces</h3>
      </div>
      <div class="panel-body">
        <table id="main" class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
                <th>Name</th>
                <th>Short Name</th>
                <th></th>
              </tr>
          </thead>
          <tbody>
            <% @namespaces.each do |namespace| %>
                <tr>
                  <td><%= namespace.name %></td>
                  <td><%= namespace.short_name %></td>
                  <td>
                    <% if namespace.not_used? %>
                      <%= link_to "Delete", iso_namespace_path(namespace), :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" } %>
                    <% else %>
                      &nbsp;
                    <% end %>
                  </td>
                </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to "New", new_iso_namespace_path, :class => "btn btn-success" %>
        <%= render partial: "shared/close_button", locals: { path: root_path } %>
      </div>
    </div>
  </div>
</div>
