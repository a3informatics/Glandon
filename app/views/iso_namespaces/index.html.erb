<h3>Namespaces</h3>
<div class="col-md-12">
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Name</th>
		    	<th>Short Name</th>
		    	<th>CID</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @namespaces.each do |key, namespace| %>
			  	<tr>
			    	<td><%= namespace.name %></td>
			    	<td><%= namespace.shortName %></td>
			    	<td><%= namespace.id %></td>
			    	<td><%= link_to "Delete", iso_namespace_path(namespace), :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" } %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New Namespace", new_iso_namespace_path, :class => "btn btn-success" %>
</div>
