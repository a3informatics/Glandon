<%= javascript_tag 'setPageTitle("Index: Studies")' %>

<%= javascript_tag "var studiesIndexUrl = '#{index_data_studies_path}', studyCreateUrl='#{studies_path}'" %>
<%= javascript_include_tag 'studies/index', 'shared/index_panel' %>
<%= stylesheet_link_tag 'shared/datatables_loading' %>

<% first_level_breadcrumb (:studies) %>

<div class="row">
  <%= render partial: "shared/simple_header_tiny", :locals => {badge: "icon-study",
    main_text: "Studies",
    sub_text: "Browse all Studies in the system." } %>
</div>

<div class="row">
	<div class="col-md-12 card wide">
      <div class="card-header">Index</div>
    <div class="card-content table-cardstyle">
			<div class="half-blocks-wrap">
				<div class="font-light half-block">
					Below is the list of all <span class="text-link font-regular">sponsor</span> Studies.
					Use the Search bar to find the Study you are looking for. To see its respective History page, click on 'History'.
				</div>
				<div class="actions-wrap half-block">
					<% if policy(Thesaurus::ManagedConcept).new? %>
          <a href="#new-study-modal" class="btn medium green" id="new-study-button" data-toggle="modal">
            <span class="icon-plus text-tiny"></span>&nbsp;
            New Study
          </a>
					<% end %>
				</div>
			</div>
			<hr>
			<div class="table-width-wrapper">
	      <table id="index" class="table table-striped table-bordered table-condensed">
	        <thead>
	          <tr>
	            <th class="th-xsmall fit">Owner</th>
							<th class="th-medium fit">Identifier</th>
							<th>Label</th>
							<th class="fit"></th>
	          </tr>
	        </thead>
	        <tbody>
	        </tbody>
	      </table>
			</div>
		</div>
  </div>
  <%= render partial: "shared/studies/new_study_modal" %>
</div>
