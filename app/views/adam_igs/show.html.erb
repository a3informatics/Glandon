<%= javascript_include_tag 'standard_datatable' %>
<% second_level_breadcrumb("CDISC ADaM IGs", history_adam_igs_path, "V#{@adam_ig.semantic_version}") %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= render partial: "shared/stdInstanceTitlePanel", :locals => {:title => "Show:", :item => @adam_ig} %>
      </div>
      <div class="panel-body">
      	<h4>Details</h4>
      	<table class="table table-striped table-bordered table-condensed">
      	  <thead>
      	  <tr>
      	    <th>Identifer</th>
      	    <th>Label</th>
      	    <th>Owner</th>
      	    <th>Version</th>
      	    <th>Version Label</th>
      	  </tr>
      		</thead>
      		<tbody>
      	  <tr>
      	    <td><%= @adam_ig.identifier %></td>
      	    <td><%= @adam_ig.label %></td>
      	    <td><%= @adam_ig.owner %></td>
      	    <td><%= @adam_ig.semantic_version %></td>
      	    <td><%= @adam_ig.versionLabel %></td>
      	  </tr>
      	</tbody>
      	</table>
      	<h4>Datasets</h4>
      	<table id="secondary" class="table table-striped table-bordered table-condensed">
      	  	<thead>
      	  		<tr>
      	    		<th>Identifer</th>
      	    		<th>Label</th>
      	    		<th>Owner</th>
      	    		<th>Version</th>
      	    		<th>Version Label</th>
      	    		<th></th>
      	  		</tr>
      		</thead>
      		<tbody>
      	  	<% @adam_ig_tabulations.each do |item| %>
      		  	<tr>
      	    		<td><%= item.identifier %></td>
      			    <td><%= item.label %></td>
      			    <td><%= item.owner %></td>
      			    <td><%= item.semantic_version %></td>
      			    <td><%= item.versionLabel %></td>
      	    		<td><%= link_to "Show", adam_ig_dataset_path(:id => item.to_id), :class => "btn btn-primary btn-xs" %></td>
      	  		</tr>
      	  		<% end %>
      		</tbody>
      	</table>
      	<%= link_to "Export JSON", export_json_sdtm_ig_path(:id => @adam_ig.to_id), :class => "btn btn-info" %>
      	<%= link_to "Export Turtle", export_ttl_sdtm_ig_path(:id => @adam_ig.to_id), :class => "btn btn-info" %>
      	<br/><br/>
      </div>
    </div>
  </div>
</div>
