<%= stylesheet_link_tag 'shared/layouts/header_card' %>

<%= javascript_tag 'var pageHeaderHasTags = true' %>

<div class="col-md-12 card">
  <div class="card-content">
    <div class="h-outside-wrap">
      <div class="h-inner-wrap centered">
        <span class="circular-badge big <%= item_accent_color item.uri.to_s %> text-white"><%= badge %></span>
        <span class="text-centered text-normal text-light" style="margin-top: 5px;"><%= item.identifier %></span>
      </div>
      <div class="h-inner-wrap mid">
        <div class="text-large"> <%= item.notation %> </div>
        <div class="label-w-margin">Preferred term: <span class="font-light"> <%= item.preferred_term.label %> </span></div>
        <div class="label-w-margin">
          <%= render partial: "shared/labels_inline", :locals => {:name => "Synonym(s)", :items => item.synonym.map{|x| x.label} } %>
        </div>
        <div class="long-label justified label-w-margin">
          Definition: <span class="font-light"><%= item.definition %> </span>
        </div>

        <% if local_assigns.fetch :with_tags, true %>

          <%= render layout: "shared/expandable_content", :locals => { size: "tiny" } do %>
            <%= render partial: "shared/labels_inline", :locals => { name: "Tags", css_class: 'tag', items: item.filtered_tag_labels(context)} %>
          <% end %>

        <% end %>

      </div>
      <div id="header-indicators" class="h-inner-wrap">
        <%= yield %>
        <%= render partial: "shared/headers/indicators", locals: { id: item.id, wrap_el: "#header-indicators" } %>
      </div>
    </div>
  </div>
</div>
