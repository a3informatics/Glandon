<%= javascript_tag "let createFormUrl = '#{forms_path}'" %>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="new-form-modal">
  <div class="modal-dialog modal-lg medium-screen" role="document">

    <div class="modal-content">

      <div class="modal-header">
        <span class="modal-title text-normal text-medium" id="tableModalLabel">
          <span class="icon-forms text-link"></span>
          Create a Form
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body centered font-light">

        <div class="error-modal" style="width: 100%"></div>

        <img src="<%= image_path 'icons/new_form' %>" class="modal-img"/>
        <div class="font-light"> Fill-in the fields for a new Form: </div> <br/>

        <form id="new-form-form">
          <div class="form-wrap wide">
            <div class="form-group">
              <input type="text" name="identifier" value="" id="new-item-identifier" placeholder="Identifier"/>
            </div>
            <div class="form-group">
              <input type="text" name="label" value="" id="new-item-label" placeholder="Label"/>
            </div>
          </div>
        </form>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn medium light" id="new-item-close" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn medium" id="new-item-clear">Clear fields</button>
        <button type="button" class="btn medium green" id="new-item-submit">Submit</button>
      </div>

    </div>
  </div>
</div>
