<% if Rails.env == "test" || Rails.env == "development" %>
  <%= javascript_include_tag 'rspec_helper' %>
<% end %>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="dashboardModal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title text-normal" id="tableModalLabel">Customize your dashboard</span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <span class="font-light text-normal"> Select items on your Dashboard: </span>
            <div class="list-wrap" id="dashboard-list">
              <% user_policy_dashboard_panels.each do |sym, panel| %>
                <div class="checkbox-opt"> <label><input type="checkbox" name="<%=sym%>"><span><%= panel[:name] %></span></label></div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-6">
            <span class="font-light text-normal"> Organize your Dashboard: </span>
            <div class="de-wrap">
              <div id="dashboard-editor">
                <div class="de-header wide-de-item">Header</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn medium" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn green medium disabled" id="de-save-changes">Save</button>
      </div>
    </div>
  </div>
</div>
