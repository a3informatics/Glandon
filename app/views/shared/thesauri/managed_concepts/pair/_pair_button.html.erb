<%= javascript_tag "let isItemPaired = #{item.paired?},
                        pairSelectPath = '#{pair_thesauri_managed_concept_path(item)}',
                        unpairPath = '#{unpair_thesauri_managed_concept_path(item)}';"%>

<% if item.paired_as_parent? %>
  <%= render partial: "shared/context_menu/menu_item", :locals => { url: "#", id: "unpair-button",
    icon: "icon-unpair", text: "Unpair" } %>
<% elsif !item.paired_as_child? %>
  <%= render partial: "shared/context_menu/menu_item", :locals => { url: "#", id: "pair-select-button",
    icon: "icon-pair", text: "Pair" } %>
<% end %>
