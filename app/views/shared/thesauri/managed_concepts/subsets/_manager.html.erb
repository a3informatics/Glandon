<%= javascript_tag "let subsetDataUrl = '#{find_subsets_thesauri_managed_concept_path(item)}';" %>

<% if edit_allowed %>
  <%= javascript_tag "let subsetCreateUrl = '#{ create_subset_thesauri_managed_concept_path(item) }',
                          subsetCreateInUrl = '#{ add_subset_thesauri_path('thId') }';" %>
<% end %>

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="subsets-manager">
  <div class="modal-dialog modal-lg wide-screen" role="document">

    <div class="modal-content">

      <div class="modal-header">
        <span class="modal-title text-normal text-medium" id="tableModalLabel">
          <span class="icon-subset text-link text-small" style="margin-right: 5px;"></span>
          Subsets of <%= item.identifier %>
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">

        <div class="font-light text-centered">
          Index of latest versions of Code Lists that are Subsets of this item
        </div>

        <hr>

        <div class="table-cardstyle table-width-wrapper">
          <table style="width: 100%" id="subsets-index-table" class="table">
            <thead>
              <tr>
                <th class="fit">Identifier</th>
                <th class="fit">Submission Value</th>
                <th>Preferred Term</th>
                <th>Definition</th>
                <th class="fit"></th>
              </tr>
            </thead>
            <tbody>
            </tbody>
          </table>
        </div>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn medium light" data-dismiss="modal" aria-label="Close">Close</button>
        <% if edit_allowed %>
          <button type="button" class="btn green medium" id="new-subset-btn">+ New Subset</button>
        <% end %>
      </div>

    </div>
  </div>
</div>
