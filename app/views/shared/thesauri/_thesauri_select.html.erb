<%= javascript_include_tag 'shared/thesauri/thesauri_select' %>
<%= stylesheet_link_tag 'spinner', 'shared/table_select' %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="th-select-modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title text-normal" id="tableModalLabel">
          <span class="icon-terminology text-xnormal text-link" style="margin-right:10px;"></span> Pick a Terminology <%= local_assigns.fetch :title, "" %>
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row" style="padding: 10px 40px;">
          <div class="font-light"> Choose a Terminology where the new item should be created from the list below and click 'Select'. <br/>
            To create the item without placing it in a Terminology, click 'Do not select'.</div><br/>

          <div class="table-cardstyle all-columns">
            <table style="width: 100%;" id="thTable" class="table table-row-clickable table-condensed">
              <thead>
                <tr>
                  <th class="fit">Owner</th>
                  <th>Identifier</th>
                  <th>Label</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn medium" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn medium light ttip" id="skip_th_select">
          <span class="ttip-text ttip-left shadow-small text-medium">Item won't become a child of a Terminology</span>
          Do not select</button>
        <button type="button" class="btn medium green ttip" id="select_th">
          <span class="ttip-text ttip-left shadow-small text-medium">Item will become a child of the selected Terminology</span>
          Select</button>
      </div>
    </div>
  </div>
</div>
