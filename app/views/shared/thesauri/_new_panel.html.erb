<%= javascript_include_tag 'shared/thesauri/new_panel' %>
<div id="formInfo" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= title %></h3>
  </div>
  <div class="panel-body">
    <form id="main_form">
      <div>
        <div class="form-group">
          <% if klass.generated_identifier? %>
            <p>An identifier will be automatically generated</p>
            <input type="hidden" id="tnp_identifier" value="<%= "SERVERIDENTIFER" %>">
          <% else %>  
            <label for="tnp_identifier">Identifier:</label>
            <div class="input-group">
              <% if klass.identifier_scheme_flat? %>
                <input type="text" class="form-control" id="tnp_identifier" name="Code List Identifier">
              <% else %>
                <% if !@parent_identifier.empty? %>
                  <span class="input-group-addon" id="tnp_identifier_prefix"><%= prefix %></span>
                <% end %>
                <input type="text" class="form-control" id="tnp_identifier" name="Code List Identifier">
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <button type="button" id="tnp_new_button" class="btn btn-success">New</button>
    </form>
  </div>
</div>