<% if Rails.env == "test" || Rails.env == "development" %>
  <%= javascript_include_tag 'rspec_helper' %>
<% end %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="newTerminologyModal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title text-normal" id="tableModalLabel">
          <span class="icon-terminology text-link text-xnormal" style="margin-right:10px;"></span>
          <%= local_assigns.fetch :title, "Create a Terminology" %>
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <center>
              <img src="<%= asset_path (local_assigns.fetch :img_path, 'icons/new_thesaurus') %>" class="modal-img"/>
              <div class="font-light"> Choose an identifier and a label for the terminology: </div> <br/>
    					<%= form_for Thesaurus.new, :url => thesauri_index_path do |f| %>
    						<div class="form-wrap wide">
    	            <div class="form-group">
    	              <%= text_field_tag "thesauri[identifier]", "", placeholder: "Identifier"  %>
    	            </div>
    	            <div class="form-group">
    	              <%= text_field_tag "thesauri[label]", "", placeholder: "Label"  %>
    	            </div>
    						</div>
              </center>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn medium" data-dismiss="modal" aria-label="Close">Close</button>
        <%= f.submit "Submit", class: "btn medium green" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
