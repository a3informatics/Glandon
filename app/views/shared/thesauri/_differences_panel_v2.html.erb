<%= javascript_include_tag 'shared/thesauri/differences_panel' %>
<%= stylesheet_link_tag 'shared/datatables_loading' %>
<style>
  <%= Diffy::CSS %>
</style>
<div class="card">
  <div class="card-header">
    <%= title %>
    <span class="icon-info-circle ttip text-small text-bright" style="margin-left: 4px;">
      <span class="ttip-text shadow-small text-dark"><%= if info.empty? then "" else info end %></span>
    </span>
  </div>
  <div class="card-content">
    <table id="differences_table" class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th class="col-sm-1">Date</th>
          <th class="fit">Identifier</th>
          <th class="fit">Submission Value</th>
          <th>Preferred Term</th>
          <th>Synonym</th>
          <th class="col-sm-4">Definition</th>
        </tr>
      <thead>
    </table>
  </div>
</div>
