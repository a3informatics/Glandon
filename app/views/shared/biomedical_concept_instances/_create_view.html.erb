<%= javascript_tag "let createBCUrl = '#{create_from_template_biomedical_concept_instances_path}'" %>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="new-bc-modal">
  <div class="modal-dialog modal-lg medium-screen" role="document">

    <div class="modal-content">

      <div class="modal-header">
        <span class="modal-title text-normal text-medium" id="tableModalLabel">
          <span class="icon-biocon text-link"></span>
          Create a Biomedical Concept
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body centered font-light">

        <div id="new-bc-error" style="width: 100%"></div>

        <img src="<%= image_path 'icons/new_bc' %>" class="modal-img"/>
        <div class="font-light"> Fill out the fields for the new Biomedical Concept: </div> <br/>

        <form id="new-bc-form">
          <div class="form-wrap wide">
            <div class="form-group">
              <input type="text" name="identifier" value="" id="new-bc-identifier" placeholder="Identifier"/>
            </div>
            <div class="form-group">
              <input type="text" name="label" value="" id="new-bc-label" placeholder="Label"/>
            </div>
            <div class="form-group">
              <input type="text" class="clickable" name="template" value="" id="new-bc-template" placeholder="Template (click to select)" readonly/>
            </div>
          </div>
        </form>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn medium light" id="new-bc-close" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn medium" id="new-bc-clear">Clear fields</button>
        <button type="button" class="btn medium green" id="new-bc-submit">Submit</button>
      </div>

    </div>
  </div>
</div>

<%= render partial: "shared/items_picker/items_picker", locals: { id: "new-bc" } %>
