<%= javascript_include_tag 'shared/d3/d3_tree', 'd3_editor_new', 'shared/iso_concept_systems/concept_system_view_panel_v2'%>
<%= stylesheet_link_tag 'shared/d3/d3_tree', 'iso_concept_systems/tags' %>

<div class= "card wide">
  <div class="card-header">
    Tag Viewer
    <span class="icon-info-circle ttip text-small text-bright" style="margin-left: 4px;">
      <span class="ttip-text shadow-small text-dark" style="text-align:left">
        Click a tag once to select it.  <br/> Double click on a parent tag to collapse / expand its children. <br/>
        Use the - and + buttons to scale the tree vertically. <br/>
        Use the slider on the bottom of the tree (when available) <br/> to scroll through it horizontally.
        You can search typing <br/> into the Search bar and pressing Return. <br/>
      </span>
    </span>
  </div>
  <div class="card-content">
    <div class="tree-toolbar">
      <div class="form-wrap font-light" id="d3Search" >
        <input id="d3Search_input" class="search-tree" type="search" placeholder="Search for a tag" name="search-tree">
        <button class="btn medium" id="clearSearch" type="button"><span class="icon-times text-tiny"></span> Clear</button>
      </div>
      <div class="btn-group" role="group" aria-label="First group">
        <button id="d3_minus" type="button" class="btn medium nomargin ttip">
          <span class="icon-minus-circle"></span>
          <span class="ttip-text ttip-left shadow-small text-medium">Zoom out</span>
        </button>
        <button id="d3_plus" type="button" class="btn medium nomargin ttip">
          <span class="icon-plus-circle"></span>
          <span class="ttip-text ttip-left shadow-small text-medium">Zoom in</span>
        </button>
      </div>
    </div>
    <div class="d3-tree scroll-styled" id="d3">
        <!-- D3 Area -->
    </div>
  </div>
</div>
