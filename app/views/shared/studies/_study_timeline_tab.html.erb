<%= javascript_include_tag 'jquery-ui.min.js'%>
<%= javascript_include_tag "shared/context_dialog", "shared/studies/study_matrix",
                            "shared/studies/study_timeline", "shared/studies/timepoint", "shared/studies/visit", "shared/items_selector/items_selector_modal" %>
<%= stylesheet_link_tag "shared/studies/study_timeline", "shared/context_dialog", "jquery-ui.min.css" %>

<%= javascript_tag "var matrixUrl = '#{design_study_path(@study)}',
                        armTpsUrl = '#{timepoints_arm_path("armId")}',
                        armTpsSaveUrl = '#{update_timepoints_arm_path("armId")}',
                        armAddTpUrl = '#{add_timepoint_arm_path("armId")}',
                        tpAddManagedUrl = '#{add_managed_timepoint_path("tpId")}',
                        tpRemoveManagedUrl = '#{remove_managed_timepoint_path("tpId")}',
                        tpChangeUnit = '#{change_unit_timepoint_path("tpId")}',
                        visitAddTpUrl = '#{add_timepoints_visit_path("visitId")}',
                        visitRemoveTpUrl = '#{remove_timepoints_visit_path("visitId")}',
                        visitsUrl = '#{visits_study_path(@study)}';" %>

<div class="text-xnormal font-light ci-card-title">
  Data Collection Timeline
</div>

<div id="tab-timeline-body" class="scroll-styled">

  <div id="study-matrix">
  </div>

  <hr>

  <div class="btns-wrap">
    <a href="#" id='new-timepoint' class="btn medium light ttip">
      +
      <span class="icon-timepoint"></span>
      <span class="ttip-text ttip-top text-xtiny text-medium shadow-small">Add a New Timepoint</span>
    </a>
    <a href="#" id='new-visit' class="btn medium light ttip">
      +
      <span class="font-bold">V</span>
      <span class="ttip-text ttip-top text-xtiny text-medium shadow-small">Add a New Visit</span>
    </a>
    <a href="#" id='save-timeline' class="btn medium light-green ttip disabled">
      <span class="icon-sel-filled"></span>
      <span class="ttip-text ttip-top text-xtiny text-medium shadow-small">Save Timeline</span>
    </a>
  </div>

  <div id="study-timeline">
  </div>

  Visits
  <span class="icon-info-circle text-small text-light ttip">
    <span class="ttip-text ttip-top text-medium text-small shadow-small">Drag a visit to a timepoint to attach/detach</span>
  </span>
  <div id="visits-list" class="bg-labels-wrap">
  </div>

</div>
