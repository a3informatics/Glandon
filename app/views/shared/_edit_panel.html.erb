<%= javascript_include_tag 'shared/term_search_panel' %>
<%= stylesheet_link_tag 'spinner' %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="searchModal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="tableModalLabel">Search: All Current Terminology</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">  
            <table style="width: 100%;" id="searchTable" class="table table-striped table-bordered table-condensed">
              <thead>
                <tr>
                  <th>Code List</th>
                  <th>Code List Name</th>
                  <th>Item</th>
                  <th>Submission</th>
                  <th>Preferred Term</th>
                  <th>Synonym</th>
                  <th>Definition</th>
                  <th>Tags</th>
                </tr>
                <tr>
                  <th>CL</th>
                  <th>CL Name</th>
                  <th>Item</th>
                  <th>Submission</th>
                  <th>Preferred Term</th>
                  <th>Synonym</th>
                  <th>Definition</th>
                  <th>Tags</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            <input type="hidden" id="thesaurus_current" value="<%= true %>">
            <input type="hidden" id="thesaurus_single" value="<%= false %>">
            <input type="hidden" id="thesaurus_id" value="">
            <input type="hidden" id="thesaurus_namespace" value=""> 
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-danger" id="clear_search">Clear search</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn " id="add_terms">Add terms</button>
      </div>
    </div>
  </div>
</div>