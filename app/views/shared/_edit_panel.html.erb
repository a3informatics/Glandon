<%= javascript_include_tag 'shared/term_search_panel' %>
<%= stylesheet_link_tag 'spinner', 'shared/managed_children_select' %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="searchModal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <span class="modal-title text-normal" id="tableModalLabel">
          <span class="icon-search text-link" style="margin-right:10px;"></span> Search: All Current Terminology
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12 table-cardstyle rows-selected-hide all-columns">
            <div class="font-light flex-total-center selection-info">
              Items selected: <span class="bg-label" id="number-selected">0</span>
              <button id="clear-selection" class="btn btn-xs grey">Clear</button>
            </div>
            <br/>
            <div class="font-light flex-total-center modal-info"> </div>

            <table style="width: 100%;" id="searchTable" class="table table-row-clickable no-mark table-condensed">
              <thead>
                <tr>
                  <th>Code List</th>
                  <th class="th-small">Code List Name</th>
                  <th>Item</th>
                  <th>Submission</th>
                  <th>Preferred Term</th>
                  <th>Synonym</th>
                  <th>Definition</th>
                  <th>Tags</th>
                </tr>
                <tr>
                  <th>CL</th>
                  <th>CL Name</th>
                  <th>Item</th>
                  <th>Submission</th>
                  <th>Preferred Term</th>
                  <th>Synonym</th>
                  <th>Definition</th>
                  <th>Tags</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            </table>
            <input type="hidden" id="thesaurus_current" value="<%= true %>">
            <input type="hidden" id="thesaurus_single" value="<%= false %>">
            <input type="hidden" id="thesaurus_id" value="">
            <input type="hidden" id="thesaurus_namespace" value="">
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn medium" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn medium light" id="clear_search">Clear search</button>
        <button type="button" class="btn medium green" id="add_terms">Add items</button>
      </div>
    </div>
  </div>
</div>
