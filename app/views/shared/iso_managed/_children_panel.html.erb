<%= javascript_include_tag 'shared/iso_managed/children_panel' %>
<%= stylesheet_link_tag 'shared/datatables_loading' %>
<h3 class="card-header"><%= title %></h3>
<div class="card-content">
  <table id="children_table" class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th class="fit">Identifier</th>
        <th class="fit">Submission Value</th>
        <th>Preferred Term</th>
        <th>Synonym(s)</th>
        <th class="fit">Extensible</th>
        <th>Definition</th>
        <th class="fit"></th>
        <% if (policy(Thesaurus).edit? && @tc.owned?) %>
          <th class="fit"></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  <%= link_to "Add", "#searchModal", :id => "add", :class => "btn btn-primary pull-right", "data-toggle" => "modal" %>
  <%= render partial: "shared/edit_panel" %>
</div>
