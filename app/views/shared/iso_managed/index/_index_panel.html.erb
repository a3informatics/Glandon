<%= stylesheet_link_tag 'shared/datatables_loading' %>

<% if !local_assigns[:index_url].nil? %>
  <%= javascript_tag "let indexDataUrl = '#{index_url}'" %>
<% end%>

<div class="table-cardstyle">
  <table id="index" class="table <%= local_assigns.fetch :table_classes, '' %>">
    <thead>
      <tr>
        <th class="fit">Owner</th>
        <th class="fit">Identifier</th>
        <th>Label</th>

        <%# Extra Columns %>
        <%= yield  %>

        <%# Indicators %>
        <th class="ignore fit"></th>

        <%# History Button %>
        <% if local_assigns.fetch :has_history_btn?, false %>
          <th class="fit"></th>
        <% end %>
      </tr>
    </thead>
  </table>
</div>
