<% if Rails.env == "test" || Rails.env == "development" %>
  <%= javascript_include_tag 'rspec_helper' %>
<% end %>
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="edit-properties-modal">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="tableModalLabel">Properties of <%= mc.identifier %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-12">
            <%= form_for(mc, as: :edit, url: update_properties_thesauri_managed_concept_path(), html: { method: :PATCH }) do |f| %>
              <%= f.hidden_field :context_id, :value => @context_id %>
            <div class="form-wrap">
              <div class="form-row">
                <div class="form-group">
                  <%= f.label :notation, "Submission value: "%><br/>
                  <%= f.text_field :notation, autocomplete: "off", autofocus: true %>
                </div>
                <div class="form-group">
                  <%= f.label :preferred_term, "Preferred term: "%><br/>
                  <%= f.text_field :preferred_term,  autocomplete: "off", value: mc.preferred_term.label %>
                </div>
                <div class="form-group">
                  <%= f.label :synonym, "Synonym(s): "%><br/>
                  <%= f.text_field :synonym, autocomplete: "off", value: mc.synonyms_to_s %>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group">
                  <%= f.label :definition, "Definition: "%><br/>
                  <%= f.text_area :definition, autocomplete: "off" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn medium" id="close_modal_button" data-dismiss="modal" aria-label="Close">Close</button>
        <%= f.submit "Submit", id: "submit_button", class: "btn green medium submit-btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
