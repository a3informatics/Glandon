<%= javascript_tag "let createSDTMSDUrl = '#{create_from_template_biomedical_concept_instances_path}'" %>

<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="tableModalLabel" aria-hidden="true" id="new-sdtm-sd-modal">
  <div class="modal-dialog modal-lg medium-screen" role="document">

    <div class="modal-content">

      <div class="modal-header">
        <span class="modal-title text-normal text-medium" id="tableModalLabel">
          <span class="icon-sdtm text-link"></span>
          Create a SDTM Sponsor Domain
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body centered font-light">

        <img src="<%= image_path 'icons/new_sdtm' %>" class="modal-img"/>
        <div class="font-light"> Fill-in the fields for a new SDTM Sponsor Domain: </div> <br/>

        <form id="new-bc-form">
          <div class="form-wrap wide">
            <div class="form-group">
              <input type="text" name="identifier" value="" id="new-item-identifier" placeholder="Identifier"/>
            </div>
            <div class="form-group">
              <input type="text" name="label" value="" id="new-item-label" placeholder="Label"/>
            </div>
            <div class="form-group">
              <input type="text" class="clickable" name="base-on" value="" id="new-item-base-on" placeholder="Base on (click to select)" readonly/>
            </div>
          </div>
        </form>


      </div>

      <div class="modal-footer">
        <button type="button" class="btn medium light" id="new-item-close" data-dismiss="modal" aria-label="Close">Close</button>
        <button type="button" class="btn medium" id="new-item-clear">Clear fields</button>
        <button type="button" class="btn medium green" id="new-item-submit">Submit</button>
      </div>

    </div>
  </div>
</div>

<%= render partial: "shared/items_picker/items_picker", locals: { id: "new-sdtm-sd", description: "Select an IG Domain / Class to base the new SDTM Sponsor Domain on:" } %>
