<%= javascript_include_tag 'dashboard_viewer'%>
<div class="col-md-7" style="padding-right:20px; border-right: 1px solid #ccc;">
    <h3>Triple Store Viewer</h3>
    <table id="triplesTable" class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Predicate</th>
                <th>Object</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="breakAll">No data</td>
                <td class="breakAll"></td>
                <td class="breakAll"></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
<div class="col-md-5">
    <div>
        <div class="form-group">
            <%= label_tag :id, "Subject:" %><br />
            <input type="text" class="form-control" name="dashboard[id]" id="subjectId" value="<%= @id %>" >
        </div>
        <div class="form-group">
            <%= label_tag :id, "Namespace:" %><br />
            <input type="text" class="form-control" name="dashboard[namespace]" id="subjectNs" value="<%= @namespace %>">
        </div>
        <%= label_tag :history, "History Stack:" %><br />
        <table id="main" class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Order</th>
                    <th>Subject</th>
                    <th>Namespace</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>No data</td>
                    <td class="breakAll"></td>
                    <td class="breakAll"></td>
                </tr>
            </tbody>
        </table>
        <button type="button" id="viewButton" class="btn btn-primary">View</button>
        <%= link_to "Close", dashboard_index_path, :class => "btn btn-primary" %>
    </div>
    
</div>
