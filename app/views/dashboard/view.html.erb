<%= stylesheet_link_tag    'd3local' %>
<%= javascript_include_tag 'd3local' %>
<div class="col-md-8" style="padding-right:20px; border-right: 1px solid #ccc;">
    <h3>DB Viewer</h3>
    <div style="height: 1000px;" id="d3">
        <!-- D3 Area -->
    </div>
</div>
<div class="col-md-4">
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Namespaces</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <tbody>
                        <% @namespaces.each do |key, value| %>
                            <tr>
                                <td><strong><%= key %></strong></td><td><%= value %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%= link_to "Close", dashboard_index_path, :class => "btn btn-primary" %>
</div>
