<%= javascript_tag 'setPageTitle("New Registration Authority")' %>
<% second_level_breadcrumb(id_to_type('iso_registration_authorities'), "New") %>
<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">New Registration Authority</h3>
      </div>
      <div class="panel-body">
        <%= form_for @registrationAuthority do |f| %>
          <div class="form-group">
            <%= f.label :organization_identifier, "DUNS Number:" %><br />
            <%= f.text_field :organization_identifier, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <label for="name">Scope Namespace:</label>
            <%= select_tag("iso_registration_authority[namespace_id]", options_for_select(@namespaces), {:class => 'form-control'}) %>
          </div>
          <%= f.submit "Submit", class: "btn  " %>
          <%= render partial: "shared/close_button", locals: { path: iso_namespaces_path } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
