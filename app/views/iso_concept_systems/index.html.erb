<%= javascript_include_tag 'standard_datatable' %>
<h3>Classifications</h3>
<div class="col-md-8">
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
	  		<tr>
	    		<th>Label</th>
			    <th></th>
			    <th></th>
		  	</tr>
		 </thead>
		 <tbody>
			<% @conceptSystems.each do |cs| %>
			  	<tr>
			    	<td><%= cs.label %></td>
				    <td><%= link_to "Show", iso_concept_system_path(:id => cs.id, :namespace => cs.namespace), :class => "btn btn-primary btn-xs" %></td>
				    <td><%= link_to "Delete", iso_concept_system_path(:id => cs.id, :namespace => cs.namespace), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger btn-xs" %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New", new_iso_concept_system_path, :class => "btn btn-success" %>
	<%= link_to "View", view_iso_concept_systems_path, :class => "btn btn-success" %>
</div>
