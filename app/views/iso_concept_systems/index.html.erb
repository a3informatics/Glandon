<h3>Concept Systems</h3>
<div class="col-md-12">
	<h4>All Systems</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
	  		<tr>
	    		<th>Identifier</th>
			    <th>Label</th>
			    <th>Notation</th>
			    <th></th>
			    <th></th>
		  	</tr>
		 </thead>
		 <tbody>
			<% @conceptSystems.each do |csId, cs| %>
			  	<tr>
			    	<td><%= cs.identifier %></td>
				    <td><%= cs.label %></td>
				    <td><%= cs.notation %></td>
				    <td><%= link_to "Show", iso_concept_system_path(cs.id), :class => "btn btn-primary btn-xs" %></td>
				    <td><%= link_to "Delete", iso_concept_system_path(cs.id), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger btn-xs" %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New System", new_iso_concept_system_path, :class => "btn btn-success" %>
</div>
