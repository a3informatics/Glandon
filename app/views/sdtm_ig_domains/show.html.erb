<% content_for :page_title do %> <%= "Show SDTM IG Domain: #{@sdtm_ig_domain.has_identifier.identifier} (#{@sdtm_ig_domain.semantic_version})" %> <% end %>

<%= javascript_pack_tag 'sdtm_ig_domains/show' %>

<% third_level_breadcrumb(:sdtm_ig_domains, @sdtm_ig_domain, @close_path) %>

<div class="row">
  <%= render layout: "shared/headers/header_managed_item", :locals => {:item => @sdtm_ig_domain, :badge => "icon-sdtm"} do %>
    <div class="actions-wrap">
      <%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>
    </div>
  <% end %>
</div>

<div class="row">
  <div id="show-panel" class="col-md-12 card wide">
    <div class="card-header">
      Show: SDTM IG Domain
    </div>
    <div class="card-content">
      <%= render partial: "shared/sdtm_ig_domains/show_panel", locals: { show_url: @show_path } %>
    </div>
  </div>
</div>
