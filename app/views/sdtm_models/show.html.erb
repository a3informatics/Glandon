<%= javascript_include_tag 'standard_datatable' %>
<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @sdtm_model} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
	  		<tr>
	    		<th>Identifer</th>
	    		<th>Label</th>
	    		<th>Owner</th>
	    		<th>Internal Version</th>
	    		<th>Version</th>
	  		</tr>
		</thead>
		<tbody>
	  		<tr>
	    		<td><%= @sdtm_model.identifier %></td>
			    <td><%= @sdtm_model.label %></td>
			    <td><%= @sdtm_model.owner %></td>
			    <td><%= @sdtm_model.version %></td>
			    <td><%= @sdtm_model.versionLabel %></td>
	  		</tr>
		</tbody>
	</table>
	<h4>Variables</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
		  		<th>Role (Classification)</th>
		    	<th>Sub Classification</th>
		    	<th>Ordinal</th>
		    	<th>Variable Name</th>
		    	<th>Variable Label</th>
		    	<th>Type</th>
		    	<th>Desciption</th>
		  	</tr>
		</thead>
		<tbody>
			<% @sdtm_model.children.each do |item| %>
		  	<tr>
		    	<td><%= item.classification_label %></td>
		    	<td><%= item.sub_classification_label %></td>
		    	<td><%= item.ordinal %></td>
		    	<td><%= item.name %></td>
		    	<td><%= item.label %></td>
		    	<td><%= item.datatype_label %></td>
		    	<td><%= item.description %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
	<h4>Model Classes</h4>
	<table id="secondary" class="table table-striped table-bordered table-condensed">
	  	<thead>
	  		<tr>
	    		<th>Identifer</th>
	    		<th>Label</th>
	    		<th>Owner</th>
	    		<th>Internal Version</th>
	    		<th>Version</th>
	    		<th></th>
	  		</tr>
		</thead>
		<tbody>
	  	<% @sdtm_model_classes.each do |item| %>
		  	<tr>
	    		<td><%= item.identifier %></td>
			    <td><%= item.label %></td>
			    <td><%= item.owner %></td>
			    <td><%= item.version %></td>
			    <td><%= item.versionLabel %></td>
	    		<td><%= link_to "Show", sdtm_model_domain_path(:id => item.id, :sdtm_model_domain => { :namespace => item.namespace }), :class => "btn btn-primary btn-xs" %></td>
	  		</tr>
	  		<% end %>
		</tbody>
	</table>
	<%= link_to "Export JSON", export_json_sdtm_model_path(:id => @sdtm_model.id, sdtm_model: { :namespace => @sdtm_model.namespace }), :class => "btn btn-info" %>
	<%= link_to "Export Turtle", export_ttl_sdtm_model_path(:id => @sdtm_model.id, sdtm_model: { :namespace => @sdtm_model.namespace }), :class => "btn btn-info" %>
	<br/><br/>
</div>
