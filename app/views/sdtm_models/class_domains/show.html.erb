<h3>Class:</h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
		<thead>
	  		<tr>
	    		<th>Ordinal</th>
	    		<th>Label</th>
	  		</tr>
		</thead>
		<tbody>
	  		<tr>
	    		<td><%= @class_domain.ordinal %></td>
			    <td><%= @class_domain.label %></td>
	  		</tr>
		</tbody>
	</table>
	<h4>Variables</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
		  		<th>Ordinal</th>
		    	<th>Name</th>
		    	<th>Label</th>
		   		<th>Description</th>
		    	<th>Datatype</th>
		    	<th>Role</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @class_domain.children.each do |item| %>
		  	<tr>
		    	<td><%= item.ordinal %></td>
			    <td><%= item.child.name %></td>
		    	<td><%= item.label %></td>
			    <td><%= item.description %></td>
			    <td><%= item.datatype %></td>
			    <td><%= item.role %></td>
			    <td><%= link_to "Show", domains_variable_path(:id => variable.id, :namespace => CGI::escape(variable.namespace)), :class => "btn btn-primary btn-xs" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
