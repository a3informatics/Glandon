<%= javascript_tag 'setPageTitle("Code Lists")' %>
<%= javascript_include_tag 'standard_datatable' %>
<% first_level_breadcrumb (:thesauri) %>
<div class="row">
	<div class="col-md-12 card wide">
      <div class="card-header">Index: Code Lists</div>
    <div class="card-content table-invisible">
			<div class="half-blocks-wrap">
				<div class="font-light half-block">
					Below is the list of all <span class="text-accent-1-dark font-regular">standardized</span> and <span class="text-link font-regular">sponsor</span> Code Lists.
					Use the Search bar to find the Code List you are looking for.
					To see Code Lists's respective History page, click on it.
				</div>
			</div>
			<hr>
			<div class="table-width-wrapper narrow">
	      <table id="main" class="table table-striped table-bordered table-condensed">
	        <thead>
	          <tr>
	            <th class="ignore"></th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @tcs.each do |item| %>
	            <tr><td>
								<%= render partial: 'shared/iso_managed/managed_item_card_list', :locals => {item: item, path: history_thesauri_managed_concepts_path(managed_concept: {:identifier => item[:identifier], :scope_id => item[:scope_id]})} %>
	            </td></tr>
	          <% end %>
	        </tbody>
	      </table>
			</div>
		</div>
  </div>
</div>
