<%= javascript_include_tag 'thesauri/managed_concepts/history' %>
<%= javascript_tag 'setPageTitle("History: '+@identifier+'")' %>
<%= javascript_tag "var url_path = '#{history_thesauri_managed_concepts_path}';" %>
<%= javascript_tag "var url_rs_path = '#{iso_registration_states_v2_path("rs_id")}';" %>
<%= javascript_tag "var strict_params = 'managed_concept';" %>
<%= javascript_tag "var identifier = '#{@identifier}';" %>
<%= javascript_tag "var scope_id = '#{@scope_id}';" %>
<% second_level_breadcrumb(:thesauri, @scope_id, @identifier) %>
<% @close_path = thesauri_index_path %>
<div class="row">
	<%= render layout: "shared/thesauri/simple_header_card", :locals => {badge: "icon-terminology", item: @thesaurus, header_title: "Item History"} do %>
    <div class="actions-wrap">
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
				icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
    </div>
  <% end %>
</div>
<div class="row centered">
	<div class="col-md-10 card table-cardstyle">
		<%= render partial: "shared/history_panel", locals: {title: "Version History of '#{@identifier}'"} %>
	</div>
</div>
