<% content_for :page_title do %> History: <%= @identifier %> <% end %>

<%= javascript_pack_tag 'thesauri/managed_concepts/history' %>

<% second_level_breadcrumb(:thesauri, @scope_id, @identifier) %>

<div class="row">
	<%= render layout: "shared/headers/header_item_simple", :locals => { badge: "icon-terminology", item: @tc, header_title: "Item History" } do %>
    <div class="actions-wrap">
			<%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>
    </div>
  <% end %>
</div>

<div class="row">
	<%= render partial: "shared/iso_managed/history/history_card", locals: {
				identifier: @identifier, url: history_thesauri_managed_concepts_path({managed_concept: {identifier: @identifier, scope_id: @scope_id}}) } %>
</div>
