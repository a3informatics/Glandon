<%= javascript_include_tag 'thesauri/managed_concepts/edit'%>
<%= javascript_tag "var add_child_path = '#{add_child_thesauri_managed_concept_path(@thesaurus_concept)}';" %>
<%= javascript_tag "var children_path = '#{children_thesauri_managed_concept_path(@thesaurus_concept)}';" %>
<%= javascript_tag "var update_path = '/thesauri/unmanaged_concepts/:id';" %>
<%= javascript_tag "var parent_id = '#{@thesaurus.id}';" %>
<div class="row">
  <div class="col-md-8">
    <%= render partial: "shared/iso_managed/managed_header_panel", :locals => {:title => "Edit:", :item => @thesaurus_concept} %>
  </div>
  <div class="col-md-4">
    <div class="card">
        <h3 class="card-header">Navigation</h3>
      <div class="card-content">
        <%= render partial: "shared/buttons/close_v2", :locals => {link_path: @close_path, id: "close", small: false} %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render partial: "shared/thesauri/editor_panel", :locals => {title: "Code Lists"} %>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <%= render partial: "shared/thesauri/new_panel", :locals => {klass: Thesaurus::UnmanagedConcept, title: "New Code List Item", prefix: @parent_identifier} %>
  </div>
</div>
<input type="hidden" id="parameters_key" value="thesauri">
<input type="hidden" id="token_1" value="<%= @token.id %>">
<input type="hidden" id="warning_timeout" value="<%= current_user.edit_lock_warning %>">
<input type="hidden" id="close_path" value="<%= @close_path %>">