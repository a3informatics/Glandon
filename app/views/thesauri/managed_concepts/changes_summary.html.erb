<% content_for :page_title do %> <%= "Changes summary: #{@tc.notation} (#{@tc.has_identifier.identifier})" %> <% end %>

<%= javascript_include_tag 'thesauri/managed_concepts/changes' %>
<%= javascript_tag "var differences_url_path = '#{differences_summary_thesauri_managed_concept_path(id: @tc, last_id: @last, ver_span: @version_span)}';" %>
<%= javascript_tag "var changes_url_path = '#{changes_summary_data_thesauri_managed_concept_path(id: @tc, last_id: @last, ver_span: @version_span)}';" %>
<%= javascript_tag "var column_count = '#{@version_count}';" %>
<% third_level_breadcrumb(:thesauri, @tc, history_thesauri_index_path({thesauri: {identifier: @tc.scoped_identifier, scope_id: @tc.scope.id}})) %>

<div class="row">
  <%= render layout: "shared/headers/header_codelist", :locals => { item: @tc, context: nil, badge: "CL" } do %>

    <div class="actions-wrap">
      <%= render partial: "shared/buttons/ico_btn_secondary", :locals => { url: "#{changes_thesauri_managed_concept_path(@tc)}",
          id: "history", icon: "icon-changes", text: "History of all changes" } %>
      <%= render partial: "shared/buttons/return", :locals => { url: request.referrer } %>
    </div>
    
  <% end %>
</div>
<div class="row">
  <%= render partial: "shared/thesauri/differences_panel_v2", :locals => {title: "Differences Summary", info: "You are viewing summarized differences between two terminology versions.", column_count: @version_count, links: @links} %>
</div>
<div class="row">
  <%= render partial: "shared/thesauri/changes_panel_v2", :locals => {title: "Changes Summary", info: "Summary of changes in the items between two terminology versions.", column_count: @version_count, links: @links} %>
</div>
