<%= javascript_include_tag 'standard_datatable' %>
<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @thesaurus} %>
<div class="col-md-12">
  <h4>Details</h4>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Identifer</th>
        <th>Label</th>
        <th>Owner</th>
        <th>Status</th>
        <th>Version</th>
        <th>Version Label</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @thesaurus.identifier %></td>
        <td><%= @thesaurus.label %></td>
        <td><%= @thesaurus.owner %></td>
        <td><%= @thesaurus.registrationState.registrationStatus  %></td>
        <td><%= @thesaurus.semantic_version %></td>
        <td><%= @thesaurus.versionLabel %></td>
      </tr>
    </tbody>
    </table>
    <h4>Code Lists</h4>
    <table id="main" class="table table-striped table-bordered table-condensed">
      <thead>
          <tr>
            <th>Label</th>
            <th>Identifer</th>
            <th>Submission Value</th>
            <th>Preferred Term</th>
            <th>Synonym(s)</th>
            <th>Definition</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
            <% @thesaurus.children.each do |cl| %>
              <tr>
                <td><%= cl.label %></td>
                <td><%= cl.identifier %></td>
                <td><%= cl.notation %></td>
                <td><%= cl.preferredTerm %></td>
                <td><%= cl.synonym %></td>
                <td><%= cl.definition %></td>
                <td><%= link_to "Show", thesaurus_concept_path(:id => cl.id, :namespace => cl.namespace), :class => "btn btn-primary btn-xs" %></td>
              </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to "Export Turtle", export_ttl_thesauri_index_path(:id => @thesaurus.id, :namespace => @thesaurus.namespace), :class => "btn btn-info" %>
</div>