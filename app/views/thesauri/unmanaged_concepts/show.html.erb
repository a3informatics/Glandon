<% synonym_panel_id = "linkspanel" %>
<% preferred_term_panel_id = "preferred_term" %>
<%= javascript_include_tag 'thesauri/unmanaged_concepts/show', 'shared/thesauri/links_panel'  %>
<%= javascript_tag "var syn_url = '#{synonym_links_thesauri_unmanaged_concept_path}';" %>
<%= javascript_tag "var syn_panel_id = '#{synonym_panel_id}';" %>
<%= javascript_tag "var pt_url = '#{preferred_term_links_thesauri_unmanaged_concept_path}';" %>
<%= javascript_tag "var pt_panel_id = '#{preferred_term_panel_id}';" %>  
<% if @has_children %>
  <%= javascript_tag "var url_path = '#{thesauri_unmanaged_concept_path(@tc)}';" %>
<% else %>
  <%= javascript_tag "var url_path = '';" %>
<% end %>
<div class="row">
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">???</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>Label</th>
              <th>Identifer</th>
              <th>Submission Value</th>
              <th>Preferred</th>
              <th>Synonym</th>
              <th>Extensible</th>
              <th>Definition</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @tc.label %></td>
              <td><%= @tc.identifier %></td>
              <td><%= @tc.notation %></td>
              <td></td>
              <td></td>
              <%= true_false_glyphicon(@tc.extensible) %>
              <td><%= @tc.definition %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Navigation</h3>
      </div>
      <div class="panel-body">
        <%= back_close_button %>
        <%= link_to "Export CSV", export_csv_thesauri_path(@tc), :class => "btn btn-info" %>
      </div>
    </div>
  </div>
</div>
<% if @has_children %>
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "shared/iso_managed/children_panel", :locals => {:title => "Code Lists"} %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-4">
    <%= render partial: "shared/thesauri/links_panel", locals: {title: "Synonyms", panelId: synonym_panel_id } %>
  </div>
  <div class="col-md-4">
    <%= render partial: "shared/thesauri/links_panel", locals: {title: "Preferred Terms", panelId: preferred_term_panel_id } %>
  </div>
</div>

  