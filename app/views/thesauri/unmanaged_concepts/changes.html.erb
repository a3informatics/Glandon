<% content_for :page_title do %> <%= "Changes: #{@tc.notation} (#{@tc.identifier})" %> <% end %>

<%= javascript_include_tag 'thesauri/unmanaged_concepts/changes' %>
<%= javascript_tag "var differences_url_path = '#{differences_thesauri_unmanaged_concept_path(@tc)}';" %>
<%= javascript_tag "var changes_url_path = '#{changes_data_thesauri_unmanaged_concept_path(@tc)}';" %>
<%= javascript_tag "var children = #{@tc.children?};" %>
<%= javascript_tag "var column_count = '#{@version_count}';" %>

<div class="row">
  <%= render layout: "shared/headers/header_unmanaged_item", :locals => { item: @tc, context: nil, badge: "CI" } do %>

    <div class="actions-wrap">
      <%= render partial: "shared/buttons/return", :locals => { url: request.referrer  } %>
    </div>

  <% end %>
</div>
<div class="row">
  <%= render partial: "shared/thesauri/differences_panel", :locals => { title: "Differences", column_count: @version_count, links: @links } %>
</div>

<% if @tc.children? %>
  <div class="row">
    <%= render partial: "shared/thesauri/changes_panel", :locals => { title: "Changes", column_count: @version_count, links: @links } %>
  </div>
<% end %>
