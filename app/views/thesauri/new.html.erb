<h3>New Terminology:</h3>
<div class="col-md-3">
	<%= form_for @thesaurus, :url => thesauri_index_path do |f| %>
	  	<div class="form-group">
	    	<%= label_tag :identifier, "Identifier:" %><br />
	    	<%= text_field_tag "thesaurus[identifier]", "" ,class: "form-control" %>
	  	</div>
	  	<div class="form-group">
	    	<%= label_tag :label, "Label:" %><br />
	    	<%= text_field_tag "thesaurus[label]", "" , class: "form-control" %>
	  	</div>
		<%= f.submit "Create", class: "btn btn-default btn-primary" %>
	<% end %>
</div>