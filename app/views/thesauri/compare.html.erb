<% content_for :page_title do %> Terminology Compare <% end %>

<%= javascript_include_tag 'jquery-ui.min.js', 'jquery.ui.touch-punch.min.js' %>
<%= javascript_include_tag 'shared/cdisc_term/index_panel', 'shared/alphabetical_filter', 'thesauri/compare'%>
<%= stylesheet_link_tag 'shared/alphabetical_filter','shared/timeline_cdisc', media: 'all' %>

<%= javascript_tag "var compare_path = '#{compare_data_thesauri_path(id: @th, thesauri: {thesaurus_id: @other_th})}';" %>

<div class="row">
  <%= render layout: "shared/headers/header_minimal", :locals => { badge: "icon-compare",
    main_text: "Compare Terminologies",
    sub_text: "Changes between
    <span class='font-regular text-link'>#{@th.scoped_identifier} v#{@th.semantic_version}</span> and
    <span class='font-regular text-link'>#{@other_th.scoped_identifier} v#{@other_th.semantic_version}</span>.".html_safe } do %>

      <div class="btns-wrap">
        <%= render partial: "shared/buttons/ico_btn_secondary", :locals => { url: compare_csv_thesauri_path(id: @th, thesauri: {thesaurus_id: @other_th}),
            id: "report", icon: "icon-file", text: "CSV Report" } %>
        <%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>
      </div>
      
  <% end %>
</div>

<div class="row">
  <div class="col-md-12 card">
    <div class="card-header">Changes Between Terminologies</div>
      <div class="card-content">
        <%= render partial: "shared/thesauri/terminologies_compare_panel" %>
      </div>
    </div>
  </div>
