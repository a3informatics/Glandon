<%= stylesheet_link_tag    'thesauri_search_new' %>
<%= javascript_include_tag 'thesauri_search_new' %>
<% if Rails.env == "test" || Rails.env == "development" %>
	<%= javascript_include_tag 'rspec_helper' %>
<% end %>
<style>
	#searchTable { table-layout: fixed; }
</style>
<h3>Search Current Terminology</h3>
<div class="col-md-12">
	<button id="notepadAdd" class="btn btn-primary" type="button">
		Notepad+ <span class="badge"><%= @items.count %></span>
	</button>
	<h4></h4>
	<table id="searchTable" class="table table-striped table-bordered table-condensed">
  	<thead>
			<tr>
		    <th>Code List</th>
		    <th>Item</th>
		    <th>Notation</th>
		    <th>Preferred Term</th>
		    <th>Synonym</th>
		    <th>Definition</th>
	  	</tr>
		</thead>
		<tbody>
		</tbody>
		<tfoot>
      <tr>
		    <th>CL</th>
		    <th>Item</th>
		    <th>Notation</th>
		    <th>Preferred Term</th>
		    <th>Synonym</th>
		    <th>Definition</th>
      </tr>
  	</tfoot>
	</table>
	<%= link_to "Close", @close_path, :class => "btn btn-primary" %>
</div>
<input type="hidden" id="thesaurus_current" value="<%= true %>">
<input type="hidden" id="thesaurus_single" value="<%= false %>">
<input type="hidden" id="thesaurus_id" value="">
<input type="hidden" id="thesaurus_namespace" value="" %>	