<%= javascript_include_tag 'thesauri/search_current' %>
<% second_level_breadcrumb("Terminology", thesauri_index_path, "Search Current") %>
<% if Rails.env == "test" || Rails.env == "development" %>
	<%= javascript_include_tag 'rspec_helper' %>
<% end %>
<style>
	#searchTable { table-layout: fixed; }
  table.dataTable.table-condensed > thead > tr > th {
    padding-right: 5px;
  }
</style>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Search: All Current Terminology</h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12">
      <%= render partial: "shared/thesauri/search", :locals => {current: true, single: false, id: "", namespace: ""} %>
      <%= render partial: "shared/buttons/close_v2", :locals => {link_path:  @close_path, id: "close", small: false} %>
    </div>
  </div>
</div>