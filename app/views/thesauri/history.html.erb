<%= javascript_tag 'setPageTitle("History: '+@identifier+'")' %>

<%= javascript_pack_tag 'thesauri/history' %>
<%= javascript_tag "var commentsDataUrl = '#{comments_iso_managed_v2_index_path({iso_managed: {identifier: @identifier, scope_id: @scope_id}})}';" %>

<% second_level_breadcrumb(:thesauri, @scope_id, @identifier) %>

<div class="row">
	<%= render layout: "shared/headers/header_item_simple", :locals => {badge: "icon-terminology", item: @thesaurus, header_title: "Item History"} do %>
    <div class="actions-wrap">
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
				icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
    </div>
  <% end %>
</div>

<div class="row">
	<%= render partial: "shared/iso_managed/history/history_card", locals: {
				identifier: @identifier, url: history_thesauri_index_path({thesauri: {identifier: @identifier, scope_id: @scope_id}}) } %>
</div>

<div class="row">
	<div class="col-md-12 card wide table-cardstyle">
		<%= render partial: "shared/iso_managed/comments_panel" %>
	</div>
</div>

<%= render partial: "shared/items_selector/items_selector_modal", :locals => {id: "1"} %>
<%= render partial: "shared/thesauri/new_terminology", :locals => {title: "Clone Terminology", img_path: "icons/copy_th"} %>
<% if(@thesaurus.get_referenced_thesaurus != nil) %>
	<%= render partial: "shared/cdisc_terms/cdisc_ver_select_modal" %>
<% end %>
