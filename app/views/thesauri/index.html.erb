<h1>Thesauri</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Identifier</th>
		    	<th>Version Label</th>
		    	<th>Version</th>
		    	<th>CID</th>
		    	<th></th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @thesauri.each do |thesaurus| %>
				<tr>
			    	<td><%= thesaurus.identifier %></td>
			    	<td><%= thesaurus.versionLabel %></td>
			    	<td><%= thesaurus.version %></td>
			    	<td><%= thesaurus.id %></td>
			    	<td><%= link_to "Show", thesauri_path(thesaurus), :class => "btn btn-primary" %></td>
			    	<td><%= link_to "Remove", thesauri_path(thesaurus), :class => "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New thesauri", new_thesauri_path, :class => "btn btn-success" %>
</div>