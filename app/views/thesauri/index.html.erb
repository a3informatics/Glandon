<h1>Thesauri</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table class="table table-striped table-bordered table-condensed">
		  <tr>
		    <th>Scoped Identifier Id</th>
		    <th>CID</th>
		    <th>II Link</th>
		    <th></th>
		  </tr>
			<% @thesauri.each do |thesaurus| %>
			  <tr>
			    <td><%= thesaurus.scopedIdentifierId%></td>
			    <td><%= thesaurus.id%></td>
			    <td><%= link_to "Linky linky", scoped_identifier_path(thesaurus.scopedIdentifierId) %></td>
			    <td><%= link_to "Remove", thesauri_path(thesaurus), method: :delete, data: { confirm: "Are you sure?" } %></td>
			  </tr>
			<% end %>
	</table>
	<%= link_to "New thesauri", new_thesauri_path, :class => "btn btn-success" %>
</div>