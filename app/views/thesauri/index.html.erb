<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Terminology") %>
<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Index: Terminology</h3>
      </div>
      <div class="panel-body">
        <table id="main" class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th>Owner</th>
              <th>Identifier</th>
              <th>Label</th>
              <th class="fit"></th>
            </tr>
          </thead>
          <tbody>
            <% @thesauri.each do |item| %>
              <tr>
                  <td><%= item[:owner] %></td>
                  <td><%= item[:identifier] %></td>
                  <td><%= item[:label] %></td>
                  <td><%= link_to "History", history_thesauri_index_path(thesauri: {:identifier => item[:identifier], :scope_id => item[:scope_id]}), :class => "btn  btn-xs" %></td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
	</div>
	<div class="col-md-4">
		<% if policy(Thesaurus).new? %>
			<div id="formInfo" class="panel panel-default">
	      <div class="panel-heading">
	          <h3 class="panel-title">New Terminology</h3>
	      </div>
	      <div class="panel-body">
					<%= form_for Thesaurus.new, :url => thesauri_index_path do |f| %>
            <div class="form-group">
              <%= label_tag :identifier, "Identifier:" %><br />
              <%= text_field_tag "thesauri[identifier]", "" ,class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag :label, "Label:" %><br />
              <%= text_field_tag "thesauri[label]", "" , class: "form-control" %>
            </div>
            <%= f.submit "Create", class: "btn btn-default " %>
          <% end %>
				</div>
			</div>
    <% end %>
		<div id="formInfo" class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search Current Terminology</h3>
      </div>
      <div class="panel-body">
      	<p>Search across all current versions of terminology.</p>
				<%= link_to "Search Current", search_current_thesauri_index_path, :class => "btn " %>
			</div>
		</div>
	</div>
</div>