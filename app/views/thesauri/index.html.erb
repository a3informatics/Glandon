<h3>Index: Terminology</h3>
<div class="col-md-6">
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Identifier</th>
		    	<th>Label</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @thesauri.each do |thesaurus| %>
				<tr>
			    	<td><%= thesaurus[:identifier] %></td>
			    	<td><%= thesaurus[:label] %></td>
			    	<td><%= link_to "History", history_thesauri_index_path(:identifier => thesaurus[:identifier]), :class => "btn btn-primary btn-xs" %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New", new_thesauri_path, :class => "btn btn-success" %>
</div>