<%= javascript_tag 'setPageTitle("Terminology")' %>
<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Terminology") %>
<div class="row">
	<div class="col-md-8 card wide">
      <div class="card-header">Index: Terminology</div>
    <div class="card-content table-cardstyle">
      <table id="main" class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Owner</th>
            <th>Identifier</th>
            <th>Label</th>
            <th class="fit"></th>
          </tr>
        </thead>
        <tbody>
          <% @thesauri.each do |item| %>
            <tr>
                <td><%= item[:owner] %></td>
                <td><%= item[:identifier] %></td>
                <td><%= item[:label] %></td>
                <td><%= link_to "History", history_thesauri_index_path(thesauri: {:identifier => item[:identifier], :scope_id => item[:scope_id]}), :class => "btn btn-xs" %></td>
              </tr>
          <% end %>
        </tbody>
      </table>
    </div>
	</div>
	<div class="col-md-4">
		<% if policy(Thesaurus).new? %>
			<div id="formInfo" class="col-md-12 card narrow">
	    	<div class="card-header">New Terminology</div>
	      <div class="card-content">
					<div class="font-light"> Choose an identifier and a label: </div>
					<%= form_for Thesaurus.new, :url => thesauri_index_path do |f| %>
						<div class="form-wrap wide">
	            <div class="form-group">
	              <%= text_field_tag "thesauri[identifier]", "", placeholder: "Identifier"  %>
	            </div>
	            <div class="form-group">
	              <%= text_field_tag "thesauri[label]", "", placeholder: "Label"  %>
	            </div>
						</div>
          	<%= f.submit "Create", class: "btn medium green" %>
          <% end %>
				</div>
			</div>
    <% end %>
		<div id="formInfo" class="col-md-12 card narrow">
      <div class="card-header">Search Current Terminology</div>
      <div class="card-content">
      	<p>Search across all current versions of terminology.</p>
				<%= link_to "Search Current", search_current_thesauri_index_path, :class => "btn medium" %>
			</div>
		</div>
	</div>
</div>
