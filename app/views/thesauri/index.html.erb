<%= javascript_tag 'setPageTitle("Terminology")' %>
<%= javascript_include_tag 'standard_datatable', 'thesauri/index' %>
<%= javascript_tag "var searchMultiUrl = '#{search_multiple_thesauri_index_path}',
												searchUrl = '#{search_thesauri_path(id: "thId")}'" %>
<% first_level_breadcrumb (:thesauri) %>
<div class="row">
	<div class="col-md-12 card wide">
      <div class="card-header">Index: Terminology</div>
    <div class="card-content table-invisible">
			<div class="half-blocks-wrap">
				<div class="font-light half-block">
					Below is the list of all <span class="text-accent-1-dark font-regular">standardized</span> and <span class="text-link font-regular">sponsor</span> Terminologies.
					Use the Search bar to find the Terminology you are looking for.
					To see Terminology's respective History page, click on it.
				</div>
				<div class="actions-wrap half-block">
					<a href="#selector-modal-1" class="btn medium light" id="selector" data-toggle="modal">
						Selector
					</a>
					<a href="#im-select-modal" class="btn medium light" id="search" data-toggle="modal">
						<span class="icon-search text-small"></span>&nbsp;
						Search Terminologies
					</a>
					<% if policy(Thesaurus).new? %>
						<a href="#newTerminologyModal" class="btn medium green" id="new_terminology" data-toggle="modal">
							<span class="icon-plus text-tiny"></span>&nbsp;
							New Terminology
						</a>
						<%= render partial: "shared/thesauri/new_terminology" %>
					<% end %>
				</div>
				<%= render partial: "shared/iso_managed/managed_items_select_modal", :locals => {type: :thesauri,
					description: "Select one or more Terminology version in which to search, or choose all Current / Latest versions."} %>

				<%= render partial: "shared/items_selector/items_selector_modal", :locals => { id: 1 } %>

			</div>
			<hr>
			<div class="table-width-wrapper narrow">
	      <table id="main" class="table table-striped table-bordered table-condensed">
	        <thead>
	          <tr>
	            <th class="ignore"></th>
	          </tr>
	        </thead>
	        <tbody>
	          <% @thesauri.each do |item| %>
	            <tr><td>
								<%= render partial: 'shared/iso_managed/managed_item_card_list', :locals => {item: item, path: history_thesauri_index_path(thesauri: {:identifier => item[:identifier], :scope_id => item[:scope_id]})} %>
	            </td></tr>
	          <% end %>
	        </tbody>
	      </table>
			</div>
		</div>
  </div>
</div>
