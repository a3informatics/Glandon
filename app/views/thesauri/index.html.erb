<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Terminology") %>
<h3>Index: Terminology</h3>
<div class="row">
	<div class="col-md-8">
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
		    	<th>Owner</th>
		    	<th>Identifier</th>
		    	<th>Label</th>
		    	<th></th>
		  	</tr>
			</thead>
			<tbody>
				<% @thesauri.each do |item| %>
					<tr>
				    	<td><%= item[:owner] %></td>
				    	<td><%= item[:identifier] %></td>
				    	<td><%= item[:label] %></td>
				    	<td><%= link_to "History", history_thesauri_index_path(:identifier => item[:identifier], :scope_id => item[:owner_id]), :class => "btn btn-primary btn-xs" %></td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<% if policy(Thesaurus).new? %>
			<div id="formInfo" class="panel panel-default">
	      <div class="panel-heading">
	          <h3 class="panel-title">New Terminology</h3>
	      </div>
	      <div class="panel-body">
					<%= link_to "New", new_thesauri_path, :class => "btn btn-success" %>
				</div>
			</div>
    <% end %>
		<div id="formInfo" class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Search Current Terminology</h3>
      </div>
      <div class="panel-body">
      	<p>Search across all current versions of terminology.</p>
				<%= link_to "Search Current", search_current_thesauri_index_path, :class => "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>