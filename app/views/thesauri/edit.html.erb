<%= stylesheet_link_tag    'spinner' %>
<%= javascript_include_tag 'thesauri_editor', 'unload', 'field_validation', 'spinner', 'token_timer' %>
<% third_level_managed_item_breadcrumb(@thesaurus, "Terminology", thesauri_index_path, @close_path, "Edit:") %>
<script id="json_data" type="text/json">
  <%= raw @thesaurus.to_json.to_json %>
</script>
<div class="row">
  <div class="col-md-8">
    <%= render partial: "shared/iso_managed/managed_header_panel", :locals => {:title => "Show:", :item => @thesaurus} %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Navigation</h3>
      </div>
      <div class="panel-body">
        <%= render partial: "shared/buttons/close_v2", :locals => {link_path: @close_path, id: "close", small: false} %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= render partial: "shared/thesaurusConceptEditor" %>
  </div>
</div>
<input type="hidden" id="add_child_path" value="<%= add_child_thesauri_index_path %>">
<input type="hidden" id="children_path" value="<%= children_thesauri_index_path %>">
<input type="hidden" id="parameters_key" value="thesauri">
<input type="hidden" id="token_1" value="<%= @token.id %>">
<input type="hidden" id="warning_timeout" value="<%= current_user.edit_lock_warning %>">
<input type="hidden" id="close_path" value="<%= @close_path %>">
<input type="hidden" id="referer_path" value="<%= @referer_path %>">