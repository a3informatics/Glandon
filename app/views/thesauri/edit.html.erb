<%= javascript_include_tag 'thesauri_editor' %>
<script id="jsonData" type="text/json">
    <%= raw @thesaurus.to_operation.to_json %>
</script>
<div class="row">
    <div class="col-md-12">
        <%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Edit:", :item => @thesaurus} %>
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Label</th>
                    <th>Identifer</th>
                    <th>Version</th>
                    <th>Version Label</th>
                    <th>Owner</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @thesaurus.label %></td>
                    <td><%= @thesaurus.identifier %></td>
                    <td><%= @thesaurus.version %></td>
                    <td><%= @thesaurus.versionLabel %></td>
                    <td><%= @thesaurus.owner %></td>
                </tr>
            </tbody>
        </table>
        <%= render partial: "shared/thesaurusConceptEditor" %>
    </div>
</div>
<input type="hidden" id="thesaurus_flag" value="T">