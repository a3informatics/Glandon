<%= javascript_tag 'setPageTitle("Search Terminologies")' %>
<% breadcrumb ([id_to_type(:thesauri), {link: "#", text: "Search"}]) %>
<% if Rails.env == "test" || Rails.env == "development" %>
	<%= javascript_include_tag 'rspec_helper' %>
<% end %>

<%= javascript_include_tag 'shared/tags', 'thesauri/search_multiple' %>
<%= javascript_tag "var url_path = '#{@search_url}';" %>

<%= javascript_tag "var idSet = '#{local_assigns.fetch :id_set, []}',
												filter = '#{local_assigns.fetch :filter, ""}';" %>

<div class="row">
  <%= render layout: "shared/simple_header_tiny", :locals => {badge: "icon-terminology",
    main_text: "<span class='text-medium font-light'>Search</span> #{@search_type}".html_safe,
    sub_text: "Searching in the pre-selected set of Terminologies." } do %>
      <div class="btns-wrap">
        <%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
             icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
      </div>
  <% end %>
</div>

<div class="row">
	<div class="col-md-12 card">
	  <div class="card-header">
	    Search
	  </div>
	  <div class="card-content">
			<%= render partial: "shared/thesauri/search_panel_v2", :locals => {columns: [{name: "Code List", id: "parent_identifier"}, {name: "Code List Name", id: "parent_label"},
			{name: "Item", id: "identifier"}, {name: "Submission Value", id: "notation"}, {name: "Preferred Term", id: "preferred_term"}, {name: "Synonym", id: "synonym"},
			{name: "Definition", id: "definition"}, {name: "Tags", id: "tags"}, {name: "TIdentifier", id: "tidentifier", searchable: false}, {name: "TVersion", id: "tversion", searchable: false}]} %>
	  </div>
	</div>
</div>
