<% content_for :page_title do %> Index: Managed Collections <% end %>

<%= javascript_pack_tag 'managed_collections/index' %>

<% first_level_breadcrumb (:managed_collections) %>

<div class="row">
  <%= render layout: "shared/headers/header_minimal", :locals => {badge: "icon-collection",
    main_text: "Managed Collections", sub_text: "Browse all Managed Collections in the system." } do %>
      <div class="btns-wrap"></div>
  <% end %>
</div>

<div class="row">

  <% content_for :description do %>
    Below is the list of all <span class="text-accent-1-dark font-regular">standardized</span> and <span class="text-link font-regular">sponsor</span> Managed Collections.
    Use the Search bar to find the Managed Collection you are looking for.
    To see Managed Collection's respective History page, click on it.
  <% end %>

  <% content_for :actions do %>

    <% if policy(ManagedCollection).new? %>
      <a href="#new-bc-modal" class="btn medium green" id="new-bc-button" data-toggle="modal">
        <span class="icon-plus text-tiny"></span>&nbsp; New Managed Collection
      </a>
    <% end %>
  <% end %>

  <%= render partial: "shared/iso_managed/index/index_card", locals: { title: "Managed Collections", url: managed_collections_path } %>

</div>

<%#= render partial: "shared/managed_collections/create_modal" %>
