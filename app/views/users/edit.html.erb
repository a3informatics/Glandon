<h3>Edit: <%= @user.email %></h3>
<%= form_for @user do |f| %>
  <div class="row">
		<div class="col-md-6">
		  	<table id="main" class="table table-striped table-bordered table-condensed">
		  		<thead>
		  			<tr>
		    			<th>Role</th>
							<th>Select</th>
		  			</tr>
		  		</thead>
		  		<tbody>
						<% Role.all.each do |role| %>
  		  			<tr>
    						<td><%= role.name %></td>
			    			<td><%= check_box_tag "user[role_ids][]", role.id, @user.role_ids.include?(role.id) %></td>
  		  			</tr>
						<% end %>
			  	</tbody>
			</table>
		</div>
	</div>
	<%= f.submit "Update", class: "btn btn-default btn-primary" %>
<% end %>
