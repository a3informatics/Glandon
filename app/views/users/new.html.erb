<% content_for :page_title do %> New User Account <% end %>

<% breadcrumb ([id_to_type(:users), {link: "#", text: "New"}]) %>

<div class="row">
	<%= render layout: "shared/headers/header_generic", :locals => { badge: "icon-users", header_title: "",
		main_text: "Users", sub_texts: "Create a new user account." } do %>
	<% end %>
</div>

<div class="row centered">
  <div class="col-md-10 card wide">

    <div class="card-header">
      New User Account
    </div>

    <div class="card-content">
      <center>
        <div class="font-light text-small">
          <%= password_message %>
        </div>
        <img src="<%= asset_path (local_assigns.fetch :img_path, 'icons/new_user') %>" class="modal-img centered"/>
        <div class="row">
            <%= form_for User.new, url: create_user_path do |f| %>
            <div class="form-wrap wide">
              <div class="form-group">
                <%= f.email_field :email, autocomplete: "off", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= f.text_field :name, autocomplete: "off", placeholder: "Display name" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
              </div>
            </div>
            <%= f.submit "Create Account", id: "create-account-btn", class: "btn medium green" %>
            <% end %>
        </div>
      </center>
    </div>
  </div>
</div>
