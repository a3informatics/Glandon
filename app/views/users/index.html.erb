<h3>Index: Users</h3>
<div class="row">
	<div class="col-md-8">
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
		    	<th>User</th>
		    	<th></th>
		  	</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
				    	<td><%= "#{user.email}" %></td>
				    	<td><%= link_to "edit", edit_user_path(user), :class => "btn btn-primary btn-xs" %></td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>