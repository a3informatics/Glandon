<%= javascript_include_tag 'standard_datatable' %>
<% top_level_breadcrumb ("Users") %>
<h3>Index: Users</h3>
<div class="row">
	<div class="col-md-8">
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
		    	<th>User</th>
		    	<th>Roles</th>
		    	<th></th>
		    	<th></th>
		  	</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
				    	<td><%= "#{user.email}" %></td>
				    	<td><%= "#{user.role_list_stripped}" %></td>
				    	<td><%= link_to "Edit", edit_user_path(user), :class => "btn btn-primary btn-xs" %></td>
				    	<td>
				    		<% if @current_user.id != user.id %>
				    			<%= link_to "Delete", user_path(user), :class => "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure?" } %>
				    		<% end %>
				    	</td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
		<%= link_to "New", new_user_path, :class => "btn btn-success" %>
	</div>
</div>