<h3>Show: <%= @user.email %></h3>
<div class="row">
	<div class="col-md-6">
	  	<table id="main" class="table table-striped table-bordered table-condensed">
	  		<thead>
	  			<tr>
	    			<th>Role</th>
						<th>Select</th>
	  			</tr>
	  		</thead>
	  		<tbody>
					<% Role.all.each do |role| %>
		  			<tr>
  						<td><%= role.name %></td>
		    			<td><%= check_box_tag "user[role_ids][]", role.id, @user.role_ids.include?(role.id) %></td>
		  			</tr>
					<% end %>
		  	</tbody>
		</table>
		<%= link_to "Edit", edit_user_path(@user), :class => "btn btn-primary" %>
	</div>
</div>
