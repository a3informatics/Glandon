<%= javascript_include_tag 'standard_datatable' %>
<div class="row centered">
	<div class="col-md-9 card wide table-cardstyle all-columns">
		<div class="card-header">Show: <%= @user.email %></div>
		<div class="card-content">
	  	<table id="main" class="table table-striped table-bordered table-condensed">
	  		<thead>
	  			<tr>
	    			<th>Role name</th>
						<th>Has role</th>
	  			</tr>
	  		</thead>
	  		<tbody>
					<% Role.all.each do |role| %>
		  			<tr>
  						<td><%= Role.to_display(role.name.to_sym) %></td>
		    		  <%=  true_false_glyphicon(@user.role_ids.include?(role.id)) %>
		  			</tr>
					<% end %>
		  	</tbody>
		</table>
		<%= link_to "Edit user roles", edit_user_path(@user), :class => "btn medium" %>
		</div>
	</div>
</div>
