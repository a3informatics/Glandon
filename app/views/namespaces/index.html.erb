<h1>Organizations (Namespaces)</h1>
<div class="col-md-10">
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Name</th>
		    	<th>CID</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @namespaces.each do |namespace| %>
			  	<tr>
			    	<td><%= namespace.name %></td>
			    	<td><%= namespace.id %></td>
			    	<td><%= link_to "Remove", namespace_path(namespace), method: :delete, data: { confirm: "Are you sure?" } %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New namespace", new_namespace_path, :class => "btn btn-success" %>
</div>
