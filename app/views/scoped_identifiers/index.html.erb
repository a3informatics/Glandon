<h1>Scoped Identifiers</h1>
<div class="col-md-10">
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
		  	<tr>
		    	<th>Identifier</th>
		    	<th>Version Label</th>
		    	<th>Internal Version</th>
		    	<th>CID</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @scopedIdentifiers.each do |scopedIdentifier| %>
				<tr>
					<td><%= scopedIdentifier.identifier %></td>
				    <td><%= scopedIdentifier.versionLabel %></td>
				    <td><%= scopedIdentifier.version %></td>
				    <td><%= scopedIdentifier.id %></td>
				    <td><%= link_to "Delete", scoped_identifier_path(scopedIdentifier), :class => "btn btn-success" , method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New Scoped Identifier", new_scoped_identifier_path, :class => "btn btn-success" %>
</div>