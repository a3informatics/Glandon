<h1>Scoped Identifiers</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table class="table table-striped table-bordered table-condensed">
		  <tr>
		    <th>Identifier</th>
		    <th>Version</th>
		    <th>Internal Version</th>
		    <th>CID</th>
		    <th></th>
		  </tr>
			<% @scopedIdentifiers.each do |scopedIdentifier| %>
			  <tr>
			    <td><%= scopedIdentifier.identifier %></td>
			    <td><%= scopedIdentifier.version %></td>
			    <td><%= scopedIdentifier.internalVersion %></td>
			    <td><%= scopedIdentifier.id %></td>
			    <td><%= link_to "Remove", scoped_identifier_path(scopedIdentifier.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
			  </tr>
			<% end %>
	</table>
	<%= link_to "New version", new_scoped_identifier_path, :class => "btn btn-success" %>
</div>