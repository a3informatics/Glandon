<h1>Standards <%= @sdtmig.version %> <small>(V<%= @sdtmig.internalVersion %>)</small></h1>
<div class="col-md-10">
	<h2>Details</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
	  <tr>
	    <th>Identifer</th>
	    <th>Internal Version</th>
	    <th>Version</th>
	  </tr>
		</thead>
		<tbody>
	  <tr>
	    <td><%= @sdtmig.identifier %></td>
	    <td><%= @sdtmig.internalVersion %></td>
	    <td><%= @sdtmig.version %></td>
	  </tr>
	</tbody>
	</table>
	<h2>Domains</h2>
	<table id="cl" class="table table-striped table-bordered table-condensed">
	  <thead>
		  <tr>
		    <th>Name</th>
		    <th></th>
		  </tr>
		</thead>
		<tfoot>
      <tr>
		    <th></th>
      </tr>
    </tfoot>
		<tbody>
			<% @sdtmig.domains.each do |key, domain| %>
		  	<tr>
		    	<td><%= domain.identifier %></td>
			    <td><%= link_to "Show", domain_path(:id => domain.id, :namespace => CGI::escape(domain.namespace)), :class => "btn btn-primary" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
