<h3>Standards <%= @sdtmig.versionLabel %> <small>(V<%= @sdtmig.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
	  <tr>
	    <th>Identifer</th>
	    <th>Owner</th>
	    <th>Internal Version</th>
	    <th>Version</th>
	  </tr>
		</thead>
		<tbody>
	  <tr>
	    <td><%= @sdtmig.identifier %></td>
	    <td><%= @sdtmig.owner %></td>
	    <td><%= @sdtmig.version %></td>
	    <td><%= @sdtmig.versionLabel %></td>
	  </tr>
	</tbody>
	</table>
	<h4>Domains</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  <thead>
		  <tr>
		    <th>Name</th>
		    <th></th>
		  </tr>
		</thead>
		<tbody>
			<% @sdtmig.domains.each do |key, domain| %>
		  	<tr>
		    	<td><%= domain.identifier %></td>
			    <td><%= link_to "Show", domain_path(:id => domain.id, :namespace => CGI::escape(domain.namespace)), :class => "btn btn-primary btn-xs" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
