<% content_for :page_title do %> <%= "BC Associations: #{@sdtm_sponsor_domain.has_identifier.identifier} (#{@sdtm_sponsor_domain.semantic_version}) "%> <% end %>

<%= javascript_pack_tag 'sdtm_sponsor_domains/bc_associations' %>

<% third_level_breadcrumb(:sdtm_sponsor_domains, @sdtm_sponsor_domain, @close_path) %>

<%= javascript_tag "let tokenTimerId = '#{@edit.token.id}',
                        tokenTimerWarning = '#{current_user.edit_lock_warning}';"%>

<div class="row">
  <%= render layout: "shared/headers/header_managed_item", :locals => { item: @sdtm_sponsor_domain, badge: "icon-sdtm" } do %>

    <div class="actions-wrap">

			<%= render partial: "shared/buttons/timeout" %>
      <%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>

    </div>

  <% end %>
</div>

<div class="row">

  <div class="col-md-12 card wide">

    <div class="card-header">
      Biomedical Concept Associations 
    </div>

    <div class="card-content">

      <div id="managed-collection">

        <div class="btns-wrap" id="collection-actions">

          <button class="btn medium green ttip" id="add-items">
            <span class="icon-plus text-tiny"></span> Add items
          </button>
          <button class="btn medium red ttip" id="remove-selected">
            <span class="icon-trash text-tiny"></span> Remove selected
          </button>
          <button class="btn medium red ttip" id="remove-all">
            <span class="icon-trash text-tiny"></span> Remove all
          </button>

        </div>

        <%= stylesheet_link_tag 'shared/table_select_simple' %>

        <div class="loading-with-btns">
          <%= render partial: 'shared/iso_managed/managed_items_panel', locals: { 
              type_column: true, owner_column: true, table_classes: 'table-row-clickable no-mark' } %>
        </div>

      </div>



    </div>

  </div>

</div>

<%= render partial: "shared/items_picker/items_picker", :locals => { id: "add-items",
    description: "Select one or more items to add to the collection." } %>