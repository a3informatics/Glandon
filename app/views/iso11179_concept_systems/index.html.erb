<h1>Classification (Concept) Systems</h1>
<div class="col-md-10">
	<h2>All Systems</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th></th>
	    <th></th>
	  </tr>
		<% @conceptSystems.each do |csId, cs| %>
		  <tr>
		    <td><%= cs.notation %></td>
		    <td><%= link_to "Show", iso11179_concept_system_path(cs.id), :class => "btn btn-primary" %></td>
		    <td><%= link_to "Delete", iso11179_concept_system_path(cs.id), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New System", new_iso11179_concept_system_path, :class => "btn btn-success" %>
</div>
