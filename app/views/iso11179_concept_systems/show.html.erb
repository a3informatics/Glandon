<h3>Classification <%= @conceptSystem.notation %></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Notation</th>
	  </tr>
	  <tr>
	    <td><%= @conceptSystem.notation %></td>
	  </tr>
	</table>
	<h4>Classifications</h4>
	<table id="main"class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Identifier</th>
				<th>Label</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @classifications.each do |key, classification| %>
				<tr>
			  		<td><%= classification.id %></td>
			  		<td><%= classification.label %></td>
		    		<td><%= link_to "Delete", iso11179_concept_systems_iso11179_classification_path(classification.id,:concept_system_id => @conceptSystem.id), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger btn-xs" %></td>
		  		</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New Classification", new_iso11179_concept_systems_iso11179_classification_path(:concept_system_id => @conceptSystem.id), :class => "btn btn-success" %>
</div>
