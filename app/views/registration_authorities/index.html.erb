<h1>Owner (Registration Authority)</h1>
<div class="col-md-10">
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
			    <th>Number</th>
			    <th>CID</th>
			    <th>Scheme</th>
			    <th>Name</th>
			    <th>Short Name</th>
			    <th></th>
		  	</tr>
		</thead>
	  	<tbody>
			<% @registrationAuthorities.each do |registrationAuthority| %>
		  		<tr>
				    <td><%= registrationAuthority.number %></td>
				    <td><%= registrationAuthority.id %></td>
				    <td><%= registrationAuthority.scheme %></td>
				    <td><%= registrationAuthority.name %></td>
				    <td><%= registrationAuthority.shortName %></td>
				    <td><%= link_to "Remove", registration_authority_path(registrationAuthority), method: :delete, data: { confirm: "Are you sure?" } %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New authority", new_registration_authority_path, :class => "btn btn-success" %>
</div>