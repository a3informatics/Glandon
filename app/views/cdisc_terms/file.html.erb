<%= javascript_include_tag 'standard_datatable' %>
<% second_level_breadcrumb("CDISC Terminology", history_cdisc_terms_path, "Files") %>
<h3>File: CDISC_terminology</h3>
<%= form_tag "/cdisc_terms/file_delete", :method => :delete do %>
  <div class="row">
		<div class="col-md-6">
		  <table id="main" class="table table-striped table-bordered table-condensed">
	  		<thead>
	  			<tr>
	    			<th>File</th>
					<th>Select</th>
	  			</tr>
	  		</thead>
		  	<tbody>
					<% index = 1 %>
  		  	<% @files.each do |file| %>
  		  		<tr>
    					<td><%= file %></td>
			    		<td><%= check_box_tag "cdisc_term[files][]", file, nil, {:id => "cb_#{index}" }%></td>
  		  		</tr>
						<% index += 1 %>
					<% end %>
			  </tbody>
			</table>
		</div>
	</div>
	<%= submit_tag "Delete", class: "btn btn-default btn-danger" %>
	<%= link_to "Close", history_cdisc_terms_path, :class => "btn btn-primary" %>
<% end %>
