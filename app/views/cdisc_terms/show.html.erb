<h1>CDISC Terminology <%= @cdiscTerm.versionLabel %> <small>(V<%= @cdiscTerm.version %>)</small></h1>
<div class="col-md-7">
	<h2>Details</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
	  <tr>
	    <th>Identifer</th>
	    <th>Version</th>
	    <th>Version Label</th>
	  </tr>
		</thead>
		<tbody>
	  <tr>
	    <td><%= @cdiscTerm.identifier %></td>
	    <td><%= @cdiscTerm.thesaurus.managedItem.scopedIdentifier.version %></td>
	    <td><%= @cdiscTerm.thesaurus.managedItem.scopedIdentifier.versionLabel %></td>
	  </tr>
	</tbody>
	</table>
	<h2>Code Lists</h2>
	<table id="cl" class="table table-striped table-bordered table-condensed">
	  <thead>
		  <tr>
		    <th>Identifer</th>
		    <th>Submission Value</th>
		    <th>Preferred Term</th>
		    <th>Synonym(s)</th>
		    <th>Extensible</th>
		    <th>Definition</th>
		    <th>View</th>
		  </tr>
		</thead>
		<tfoot>
      <tr>
		    <th></th>
		    <th></th>
		    <th></th>
		    <th></th>
		    <th></th>
		    <th></th>
		    <th></th>
      </tr>
    </tfoot>
		<tbody>
			<% @CdiscCls.each do |cl| %>
		  	<tr>
		    	<td><%= cl.identifier %></td>
			    <td><%= cl.notation %></td>
			    <td><%= cl.preferredTerm %></td>
			    <td><%= cl.synonym %></td>
			    <td><%= cl.extensible %></td>
			    <td><%= cl.definition %></td>
			    <td><%= link_to "Show", cdisc_cl_path(:id => cl.id, :termId => @cdiscTerm.id), :class => "btn btn-primary" %></td>
		  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="col-md-3">
	<%= render partial: "shared/previousHistory", :locals => {:type => "CT", :currTerm => @cdiscTerm, :cdiscTerms => @cdiscTerms} %>
	<%= render partial: "shared/fullHistory", :locals => {:type => "CT", :currTerm => @cdiscTerm} %>
</div>

