<div class="container">
	<h1>CDISC Terminology (V<%= @cdiscTerm.version %>, <%= @cdiscTerm.date %>)</h1>
  <div class="row">
    <div class="col-md-9">
			<h2>Details</h2>
			<table class="table table-striped table-bordered table-condensed">
			  <thead>
			  <tr>
			    <th>Identifer</th>
			    <th>Version</th>
			    <th>Date</th>
			  </tr>
				</thead>
				<tbody>
			  <tr>
			    <td><%= @cdiscTerm.identifier %></td>
			    <td><%= @cdiscTerm.version %></td>
			    <td><%= @cdiscTerm.date %></td>
			  </tr>
			</tbody>
			</table>
			<h2>Code Lists</h2>
			<table class="table table-striped table-bordered table-condensed">
			  <thead>
				  <tr>
				    <th>Identifer</th>
				    <th>Notation</th>
				    <th>Preferred</th>
				    <th>Synonym</th>
				    <th>Extensible</th>
				    <th>Definition</th>
				    <th>View</th>
				  </tr>
				</thead>
				<tbody>
					<% @CdiscCls.each do |cl| %>
				  	<tr>
				    	<td><%= cl.identifier %></td>
					    <td><%= cl.notation %></td>
					    <td><%= cl.preferredTerm %></td>
					    <td><%= cl.synonym %></td>
					    <td><%= cl.extensible %></td>
					    <td><%= cl.definition %></td>
					    <td><%= link_to "Show", cdisc_cl_path(:id => cl.id, :termId => @cdiscTerm.id), :class => "btn btn-primary" %></td>
				  	</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
				<div class="panel-heading">Compare with Previous Version</div>
				<div class="panel-body">
					<table class="table table-striped table-bordered table-condensed">
					  <tr>
					    <th>Version</th>
					    <th>Date</th>
					  </tr>
						<% @cdiscTerms.each do |ct| %>
						  <tr>
						    <td><%= link_to "V" + ct.version.to_s, compare_cdisc_terms_path(:new => @cdiscTerm.id, :old => ct.id), :class => "btn btn-info" %></td>
						    <td><%= ct.date %></td>
						  </tr>
						<% end %>
					</table>
				</div>
			</div>
			<div class="panel panel-default">
				<div class="panel-heading">Get History</div>
				<div class="panel-body">
					<%= link_to "History", history_cdisc_terms_path(:id => @cdiscTerm.id), :class => "btn btn-info" %>
				</div>
			</div>
		</div>
	</div>
</div>
