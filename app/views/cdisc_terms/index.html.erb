<%= javascript_include_tag 'cdisc_term/index', 'shared/cdisc_term/index_panel' %>
<%= javascript_tag "var changes_path = '/cdisc_terms/:id/changes';" %>
<style>
  .rowpad {
    padding-top: 20px;
  }
</style>
<div class="row full rowpad">
  <div class="col-md-4">
    <div>
      <label for="from_select">From Version:</label>
      <select class="form-control" id="from_select">
        <% @versions.each do |x| %>
          <option value="<%= x[:id] %>"><%= x[:date] %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="col-md-4 text-center">
    <buttom class="btn btn-primary" id="go_button">Difference</buttom>
  </div>
  <div class="col-md-4">
    <div>
      <label for="to_select">To Version:</label>
      <select class="form-control" id="to_select">
        <% @versions.each do |x| %>
          <option value="<%= x[:id] %>"><%= x[:date] %></option>
        <% end %>
      </select>
    </div>
  </div>
</div>
<div class="row full rowpad">
  <div class="col-md-12">
    <div id="results_div"></div>
    <div id="spinner_div"><p class="text-center"><img src="<%= asset_path('processing_large_2.gif') %>"></p></div>
  </div>
</div>
<div class="row full rowpad">
  <div class="col-md-3 text-center">
    <a href="<%= history_cdisc_terms_path %>" class="btn btn-primary">Browse Every Version</a>
  </div>
  <div class="col-md-3 text-center">
    <a href="<%= history_cdisc_terms_path %>" class="btn btn-primary">Changes</a>
  </div>
  <div class="col-md-3 text-center">
    <a href="<%= history_cdisc_terms_path %>" class="btn btn-primary">Submission</a>
  </div>
  <div class="col-md-3 text-center">
    <a href="<%= history_cdisc_terms_path %>" class="btn btn-primary">Search Latest</a>
  </div>
</div>
