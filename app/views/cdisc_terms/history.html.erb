<%= javascript_tag 'setPageTitle("CDISC Terminology History")' %>
<%= javascript_include_tag 'shared/context_menu' %>
<%= javascript_include_tag 'cdisc_term/history' %>
<%= javascript_tag "var url_path = '#{history_cdisc_terms_path}';" %>
<%= javascript_tag "var strict_params = 'cdisc_term';" %>
<%= javascript_tag "var identifier = '#{@identifier}';" %>
<%= javascript_tag "var scope_id = '#{@scope_id}';" %>
<% second_level_breadcrumb(:thesauri, @scope_id, @identifier) %>
<style>
	.card{
		min-width: initial !important;
	}
</style>
<div class="row">
  <%= render layout: "shared/headers/header_item_simple", :locals => {badge: "icon-terminology", item: @ct, header_title: "Item History"} do %>
    <div class="actions-wrap">
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: changes_thesauri_path(@cdisc_term_id), id: "changes_btn",
				icon: "icon-changes", btn_text: "View Changes", dt_toggle: "", disabled: false } %>
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: submission_thesauri_path(@cdisc_term_id), id: "sub_changes_btn",
				icon: "icon-sub-value-changes", btn_text: "View Submission value changes", dt_toggle: "", disabled: false } %>
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
				icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
    </div>
  <% end %>
</div>
<div class="row centered">
	<div class="col-md-11 card wide table-cardstyle">
		<%= render partial: "shared/history_panel", locals: {title: "History"} %>
	</div>
</div>

<%= render partial: "shared/iso_managed/managed_items_select_modal", :locals => {type: :thesauri,
	description: "Select one Terminology version with which to compare. It is recommended to select only from other versions of the item you are comparing.", select_multiple: false} %>
