<%= javascript_include_tag 'standard_datatable' %>
<% index_label = "Biomedical Concepts" %>
<% index_path = biomedical_concepts_path %>
<% second_level_breadcrumb(id_to_type('biomedical_concepts'), @bc[0].scope.id, @identifier) %>
<h3>History: <%= @identifier %></h3>
<div class="row">
	<div class="col-md-12">
		<h4>Item History</h4>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<%= render partial: "shared/stdInstanceHeader" %>
			<tbody>
				<% current_item = get_current_item(@bc) %>
				<% @bc.each do |item| %>
					<%= render partial: "shared/stdInstanceRow", 
						:locals => 
							{
								:item => item, 
		  					:current_item => current_item, 
		  					:showPath => biomedical_concept_path(:id => item.id, :biomedical_concept => {:namespace => item.namespace }), 
		  					:searchPath => "", 
		  					:viewPath => "",
		  					:editPath => edit_biomedical_concept_path(:id => item.id, :biomedical_concept => {:namespace => item.namespace }),
		  					:deletePath => biomedical_concept_path(:id => item.id, :biomedical_concept => {:namespace => item.namespace }),
		  					:index_label => index_label,
								:index_path => index_path,
								:mi_class => BiomedicalConcept 
		  				} %>
				<% end %>				
			</tbody>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		<h4>Comment History</h4>
		<table id="secondary" class="table table-striped table-bordered table-condensed">
  		<%= render partial: "shared/commentHistoryHeader" %>
  		<tbody>
    		<% @bc.each do |item| %>
    			<%= render partial: "shared/commentHistoryRow", 
						:locals => { 
							:item => item,
							:index_label => index_label,
							:index_path => index_path,
							:mi_class => BiomedicalConcept
						} %>  
    		<% end %>
  		</tbody>
		</table>
	</div>
</div>
