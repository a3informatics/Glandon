<%= javascript_include_tag 'iso_managed_select_panel', 'biomedical_concept_template_new', 'field_validation' %>
<% second_level_breadcrumb(id_to_type('biomedical_concepts'), "New") %>
<% if Rails.env == "test" || Rails.env == "development" %>
	<%= javascript_include_tag 'rspec_helper' %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <h3>New: Biomedical Concept</h3>
	</div>
</div>	
<%= form_for BiomedicalConcept.new, :html => { id: "main_form" } do |f| %>
	<div class="row">
		<div class="col-md-8">
			<div class="row">
				<div class="col-md-4">
				  <div class="panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Details</h3>
						</div>	
						<div class="panel-body">
							<div class="form-group">
					    	<%= f.label :identifier, "Identifier:" %><br/>
					    	<%= f.text_field :identifier ,class: "form-control" %>
					  	</div>
					  	<div class="form-group">
					    	<%= f.label :label, "Label:" %><br/>
					    	<%= f.text_field :label, class: "form-control" %>
					  	</div>
					  	<div class="form-group">
           			<%= label_tag :template, "Template:" %><br />
          			<input id="biomedical_concept_template" type="text" class="form-control" value="Not selected" disabled="disabled">
         			</div>
   						<%= f.hidden_field :uri, value: "" %>						
						</div>
					</div>
					<%= f.submit "Create", class: "btn  " %>
					<%= render partial: "shared/close_button", locals: { path: biomedical_concepts_path } %>
				</div>
				<div class="col-md-8">
					<%= render partial: "shared/iso_managed_select_panel", 
						locals: { 
							title: "Select Template",
							list_path: list_biomedical_concept_templates_path,
							all_path: all_biomedical_concept_templates_path
						} %>  
				</div>
			</div>
		</div>
	</div>
<% end %>



