<h3>Index: Biomedical Concepts</h3>
<div class="row">
	<div class="col-md-8">
			<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
			    	<th>Owner</th>
		    		<th>Identifier</th>
		    		<th>Label</th>
		    		<th></th>
			  	</tr>
			</thead>
			<tbody>
				<% @bcs.each do |item| %>
					<tr>
				    	<td><%= item[:owner] %></td>
			    		<td><%= item[:identifier] %></td>
			    		<td><%= item[:label] %></td>
			    		<td><%= link_to "History", history_biomedical_concepts_path(:identifier => item[:identifier], :scope_id => item[:owner_id]), :class => "btn btn-primary btn-xs" %></td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<div id="formInfo" class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">New Biomedical Concept</h3>
      </div>
      <div class="panel-body">
				<%= form_for @biomedical_concept, :url => new_template_biomedical_concepts_path do |f| %>
						<div class="form-group">
					    <%= f.label :identifier, "Template Identifier:" %><br />
							<%= select_tag(:uri, options_for_select(@bcts.map{ |u| [u.identifier, u.namespace + "#" + u.id]})) %>
					  </div>
					<%= f.submit "New", class: "btn btn-default btn-success" %>
				</div>
			</div>	
		<% end %>
	</div>
</div>