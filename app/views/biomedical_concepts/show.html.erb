<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @bc} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Identifer</th>
	    <th>Label</th>
	    <th>Owner</th>
	    <th>Version</th>
	    <th>Version Label</th>
	    <th></th>
	  </tr>
	  <tr>
	    <td><%= @bc.identifier %></td>
	    <td><%= @bc.label %></td>
	    <td><%= @bc.owner %></td>
	    <td><%= @bc.version %></td>
	    <td><%= @bc.versionLabel %></td>
	    <td><%= link_to "Impact", impact_biomedical_concepts_path(:id => @bc.id, :namespace => @bc.namespace), :class => "btn btn-info btn-xs" %></td>
	  </tr>
	</table>
	<h4>Items</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
	  		<tr>
				<th>Alias</th>
				<th>Question Text</th>
				<th>Prompt Text</th> 
				<th>Enabled</th> 
				<th>Collect</th> 
				<th>Datatype</th> 
				<th>Terminology</th> 
			</tr>
		</thead>
		<tbody>
			<% @items.each do |key, item| %>
				<% if item.enabled %>
					<tr class="success">
				<% else %>
					<tr>
				<% end %>		
					<td><%= item.alias %></td>
					<td><%= item.qText %></td>
					<td><%= item.pText %></td>
					<td><%= item.enabled %></td>
					<td><%= item.collect %></td>
					<td><%= item.datatype %></td>
					<td>
						<% values = item.values %>
						<% values.each do |vKey, value| %>
							<% clis = value.clis %>
							<% clis.each do |clKey, cli| %>
								<%= cli.notation %> (<%= cli.identifier %>)<br/>
							<% end %>
						<% end %>
					</td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
