<h1>Group <%= @formGroup.name %> <small>(<%= @form.managedItem.scopedIdentifier.identifier %>, V<%= @form.managedItem.scopedIdentifier.version %>)</small></h1>
<div class="col-md-10">
	<h2>Details</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Repeating</th>
	    <th>Optional</th>
	    <th>Note</th>
	    <th>Ordinal</th>
	    <th></th>
	  </tr>
	  <tr>
	    <td><%= @formGroup.name %></td>
	    <td><%= @formGroup.repeating %></td>
	    <td><%= @formGroup.optional %></td>
	    <td><%= @formGroup.note %></td>
	    <td><%= @formGroup.ordinal %></td>
	    <td></td>
	  </tr>
	</table>
	<h2>Items</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Optional</th>
	    <th>Note</th>
	    <th>Ordinal</th>
	    <th></th>
	  </tr>
		<% @formGroup.items.each do |id, item| %>
		  <tr>
		    <td><%= item.name %></td>
		    <td><%= item.optional %></td>
		    <td><%= item.note %></td>
		    <td><%= item.ordinal %></td>
		    <td><%= link_to "Show", forms_form_item_path(item.id, :form_id => @form.id, :group_id => @formGroup.id), :class => "btn btn-primary" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New Item", new_forms_form_item_path(@formGroup.id), :class => "btn btn-success" %>
</div>
