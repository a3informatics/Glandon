<h3>Group <%= @formGroup.label %> <small>(<%= @form.identifier %>, V<%= @form.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
			<tr>
				<% @formGroup.properties.each do |property| %>
		    		<th><%= property.label %></th>
				<% end %>	
			</tr>
		</thead>
		<tbody>
			<tr>
		  		<% @formGroup.properties.each do |property| %>
		    		<td><%= property.value %></td>
				<% end %>	
			</tr>
		</tbody>
	</table>
	<h4>Items</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<% item = @formGroup.items.values[0] %>
		  		<% item.properties.each do |property| %>
					<th><%= property.label %></th>
				<% end %>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @formGroup.items.each do |id, item| %>
			<tr>
				<% item.properties.each do |property| %>
					<td><%= property.value %></td>
				<% end %>
				<td><%= link_to "Show", forms_form_item_path(:id => item.id, :groupId => @formGroup.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New Item", new_forms_form_item_path(@formGroup.id), :class => "btn btn-success" %>
</div>
