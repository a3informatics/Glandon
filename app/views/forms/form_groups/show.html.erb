<h3>Group <%= @formGroup.name %> <small>(<%= @form.managedItem.scopedIdentifier.identifier %>, V<%= @form.managedItem.scopedIdentifier.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Repeating</th>
	    <th>Optional</th>
	    <th>Note</th>
	    <th>Ordinal</th>
	    <th></th>
	  </tr>
	  <tr>
	    <td><%= @formGroup.name %></td>
	    <td><%= @formGroup.repeating %></td>
	    <td><%= @formGroup.optional %></td>
	    <td><%= @formGroup.note %></td>
	    <td><%= @formGroup.ordinal %></td>
	    <td></td>
	  </tr>
	</table>
	<h4>Items</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Optional</th>
	    <th>Note</th>
	    <th>Ordinal</th>
	    <th></th>
	  </tr>
		<% @formGroup.items.each do |id, item| %>
		  <tr>
		    <td><%= item.name %></td>
		    <td><%= item.optional %></td>
		    <td><%= item.note %></td>
		    <td><%= item.ordinal %></td>
		    <td><%= link_to "Show", forms_form_item_path(:id => item.id, :formId => @form.id, :groupId => @formGroup.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New Item", new_forms_form_item_path(@formGroup.id), :class => "btn btn-success" %>
</div>
