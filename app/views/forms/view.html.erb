<%= stylesheet_link_tag    'd3local' %>
<%= javascript_include_tag 'd3local' %>
<script id="jsonData" type="text/json">
    <%= raw @form.d3.to_json %>
</script>
<%= javascript_include_tag 'form_viewer' %>
<div class="col-md-8" style="padding-right:20px; border-right: 1px solid #ccc;">
    <%= render partial: "shared/stdInstanceTitle", :locals => {:title => "View:", :item => @form} %>
    <!--<div id="debug">
        <%= raw @form.d3.to_json %>
    </div>-->
    <div style="height: 800px;" id="d3">
        <!-- D3 Area -->
    </div>
</div>
<div class="col-md-4">
    <div>
        <div id="formTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Form</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Identifier:</strong></td>
                                <td id="formIdentifier"></td>
                            </tr>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="formLabel"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div id="groupTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Group</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="groupLabel"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div id="bcTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Biomedical Concept</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="bcLabel"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div id="bcItemTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Biomedical Concept Item</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="bcItemLabel"></td>
                            </tr>
                            <tr>
                                <td><strong>Question Text:</strong></td>
                                <td id="bcItemQText"></td>
                            </tr>
                            <tr>
                                <td><strong>Datatype:</strong></td>
                                <td id="bcItemDatatype"></td>
                            </tr>
                            <tr>
                                <td><strong>Format:</strong></td>
                                <td id="bcItemFormat"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div id="questionTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Question</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="questionLabel"></td>
                            </tr>
                            <tr>
                                <td><strong>Question Text:</strong></td>
                                <td id="questionQText"></td>
                            </tr>
                            <tr>
                                <td><strong>Mapping:</strong></td>
                                <td id="questionMapping"></td>
                            </tr>
                            <tr>
                                <td><strong>Datatype:</strong></td>
                                <td id="questionDatatype"></td>
                            </tr>
                            <tr>
                                <td><strong>Format:</strong></td>
                                <td id="questionFormat"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
        <div id="clTable" class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Code List</h3>
            </div>
            <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Identifier:</strong></td>
                                <td id="clIdentifier"></td>
                            </tr>
                            <tr>
                                <td><strong>Submission:</strong></td>
                                <td id="clSubmission"></td>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
    <%= link_to "Close", forms_path, :class => "btn btn-primary" %>
    <%= link_to "CRF", crf_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>
    <%= link_to "aCRF", acrf_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>
    <!--<%= link_to "Edit", edit_thesauri_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>-->
</div>
