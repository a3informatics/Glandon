<%= stylesheet_link_tag    'd3local' %>
<%= javascript_include_tag 'd3local' %>
<script id="jsonData" type="text/json">
    <%= raw @form.to_D3.to_json %>
</script>
<%= javascript_include_tag 'form_viewer' %>
<div class="col-md-8" style="padding-right:20px; border-right: 1px solid #ccc;">
    <h3>Form Viewer</h3>
    <!--<div id="debug">
        <%= raw @form.to_D3.to_json %>
    </div>-->
    <div style="height: 800px;" id="d3">
        <!-- D3 Area -->
    </div>
</div>
<div class="col-md-4">
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Form Details</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <tbody>
                        <tr>
                            <td><strong>Identifier:</strong></td><td><%= @form.identifier %></td>
                        </tr>
                        <tr>
                            <td><strong>Version Label:</strong></td><td><%= @form.versionLabel %></td>
                        </tr>
                        <tr>
                            <td><strong>Version:</strong></td><td><%= @form.version %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Details</h3>
            </div>
            <div class="panel-body">
                <div id="formTable">
                    <p> </p>
                </div>
                <div id="groupTable">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td id="gName"></td>
                            </tr>
                            <tr>
                                <td><strong>Optional:</strong></td>
                                <td id="gOpt"></td>
                            </tr>
                            <tr>
                                <td><strong>Note:</strong></td>
                                <td id="gNote"></td>
                            </tr>
                            <tr>
                                <td><strong>Ordinal:</strong></td>
                                <td id="gOrd"></td>
                            </tr>
                            <tr>
                                <td><strong>Repeating:</strong></td>
                                <td id="gRpt"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id="itemTable">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td id="iName"></td>
                            </tr>
                            <tr>
                                <td><strong>Optional:</strong></td>
                                <td id="iOpt"></td>
                            </tr>
                            <tr>
                                <td><strong>Note:</strong></td>
                                <td id="iNote"></td>
                            </tr>
                            <tr>
                                <td><strong>Ordinal:</strong></td>
                                <td id="iOrd"></td>
                            </tr>
                            <tr>
                                <td><strong>Property:</strong></td>
                                <td id="iProp"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <%= link_to "Close", forms_path, :class => "btn btn-primary" %>
    <!--<%= link_to "Edit", edit_thesauri_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>-->
</div>
