<%= stylesheet_link_tag    'd3local', 'form_editor'%>
<%= javascript_include_tag 'd3local', 'form_editor'%>
<script id="jsonData" type="text/json">
    <%= raw Form::empty.to_json %>
</script>
<div class="row">
    <h3>Form Creation</h3>
    <div class="col-md-7">
        <div style="height: 800px;" id="d3">
            <!-- D3 Area -->
        </div>
    </div>
    <div class="col-md-5" >
        <div>
            <div id="formInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Form Details</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <div class="form-group">
                            <label for="formIdentifier">Identifier:</label>
                            <input type="text" class="form-control" id="formIdentifier">
                        </div>
                        <div class="form-group">
                            <label for="formLabel">Label:</label>
                            <input type="text" class="form-control" id="formLabel">
                        </div>
                    </div>
                    <button type="button" id="formUpdate" class="btn btn-primary">Update</button>
                    <button type="button" id="formAddGroup" class="btn btn-primary">Add Group</button>
                    <button type="button" id="formSave" class="btn btn-primary">Save</button>
                </div>
            </div>
            <div id="groupInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Group Details</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <div class="form-group">
                            <label for="groupIdentifier">Identifier:</label>
                            <input type="text" class="form-control" id="groupIdentifier">
                        </div>
                        <div class="form-group">
                            <label for="groupLabel">Label:</label>
                            <input type="text" class="form-control" id="groupLabel">
                        </div>
                    </div>
                    <button type="button" id="groupUpdate" class="btn btn-primary">Update</button>
                    <button type="button" id="groupAddGroup" class="btn btn-primary">Add Group</button>
                    <button type="button" id="groupDelete" class="btn btn-primary">Delete</button>
                    <button type="button" id="groupAddCommon" class="btn btn-primary">Add Common</button>
                    <button type="button" id="groupAddBc" class="btn btn-primary">Add BC</button>
                </div>    
            </div>
            <div id="commonInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Common Group Details</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <div class="form-group">
                            <label for="commonIdentifier">Identifier:</label>
                            <input type="text" class="form-control" id="commonIdentifier">
                        </div>
                        <div class="form-group">
                            <label for="commonLabel">Label:</label>
                            <input type="text" class="form-control" id="commonLabel">
                        </div>
                    </div>
                    <button type="button" id="commonUpdate" class="btn btn-primary">Update</button>
                    <button type="button" id="commonDelete" class="btn btn-primary">Delete</button>
                </div>
            </div>
            <div id="bcInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Biomedical Concept Details</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-condensed">
                        <tbody>
                            <tr>
                                <td><strong>Identifier:</strong></td>
                                <td id="bcIdentifier"></td>
                            </tr>
                            <tr>
                                <td><strong>Label:</strong></td>
                                <td id="bcLabel"></td>
                            </tr>
                        </tbody>
                    </table>
                    <button type="button" id="bcDelete" class="btn btn-primary">Delete</button>
                </div>
            </div>
            <div id="itemInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Question Details</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <table class="table table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td><strong>Identifier:</strong></td>
                                    <td id="itemIdentifier"></td>
                                </tr>
                                <tr>
                                    <td><strong>Label:</strong></td>
                                    <td id="itemLabel"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="itemEnable" checked="yes"><strong>Enable</strong>
                                </label>
                            </div>
                        </div>
                        <button type="button" id="itemUpdate" class="btn btn-primary">Update</button>
                        <button type="button" id="itemCommon" class="btn btn-primary">Common</button>
                        <button type="button" id="itemRestore" class="btn btn-primary">Restore</button>
                    </div>
                </div>
            </div>
            <div id="clInfo" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Code List Details</h3>
                </div>
                <div class="panel-body">
                    <div>
                        <table class="table table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td><strong>Identifier:</strong></td>
                                    <td id="clIdentifier"></td>
                                </tr>
                                <tr>
                                    <td><strong>Label:</strong></td>
                                    <td id="clLabel"></td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="form-group">
                            <div class="checkbox">
                                <label class="checkbox-inline">
                                    <input type="checkbox" id="clEnable" checked="yes"><strong>Enable</strong>
                                </label>
                            </div>
                        </div>
                        <button type="button" id="clUpdate" class="btn btn-primary">Update</button>
                    </div>
                </div>
            </div>
            <div id="bcSelection" class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Biomedical Concept Selection</h3>
                </div>
                <div class="panel-body">
                    <table id="bcTable" class="table table-striped table-bordered table-condensed">
                        <thead>
                            <tr>
                                <th>Identifier</th>
                                <th>Label</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            
        </div>
    </div>
</div>
  



