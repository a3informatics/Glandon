<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @form} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Identifer</th>
	    <th>Label</th>
	    <th>Registration Status</th>
	    <th>Version</th>
	    <th>Version Label</th>
	  </tr>
	  <tr>
	    <td><%= @form.identifier %></td>
	    <td><%= @form.label %></td>
	    <td><%= @form.registrationState.registrationStatus %></td>
	    <td><%= @form.version %></td>
	    <td><%= @form.versionLabel %></td>
	  </tr>
	</table>
	<h4>Groups</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<% group = @form.groups[0] %>
		  		<% properties = group.properties %>
		  		<% properties.each do |property| %>
		    		<th><%= property[:label] %></th>
				<% end %>	
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @form.groups.each do |group| %>
				<tr>
			  		<% properties = group.properties %>
		  			<% properties.each do |property| %>
			    		<td><%= property[:value] %></td>
					<% end %>	
				    <td><%= link_to "Show", forms_group_path(:id => group.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
				</tr>
			<% end %>	
		</tbody>
	</table>
</div>
