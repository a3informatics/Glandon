<h3>Group <%= @formGroup.label %> <small>(<%= @form.identifier %>, V<%= @form.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
			<tr>
				<% properties = @formGroup.properties %>
		  		<% properties.each do |property| %>
		    		<th><%= property[:label] %></th>
				<% end %>	
			</tr>
		</thead>
		<tbody>
			<tr>
		  		<% properties = @formGroup.properties %>
		  		<% properties.each do |property| %>
		    		<td><%= property[:value] %></td>
				<% end %>	
			</tr>
		</tbody>
	</table>
	<h4>Sub Groups</h4>
	<% if @formGroup.groups.length > 0 %>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<% group = @formGroup.groups[0] %>
		  		<% properties = group.properties %>
		  		<% properties.each do |property| %>
					<th><%= property[:label] %></th>
				<% end %>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @formGroup.groups.each do |group| %>
			<tr>
				<% properties = group.properties %>
		  		<% properties.each do |property| %>
					<td><%= property[:value] %></td>
				<% end %>
				<td><%= link_to "Show", forms_group_path(:id => group.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% else %>
		<p>No sub groups present</p>
	<% end %>
	<h4>Items</h4>
	<% if @formGroup.items.length > 0 %>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<% item = @formGroup.items[0] %>
		  		<% properties = item.properties %>
		  		<% properties.each do |property| %>
					<th><%= property[:label] %></th>
				<% end %>
				<td></td>
			</tr>
		</thead>
		<tbody>
			<% @formGroup.items.each do |item| %>
			<tr>
				<% properties = item.properties %>
		  		<% properties.each do |property| %>
					<td><%= property[:value] %></td>
				<% end %>
				<td><%= link_to "Show", forms_item_path(:id => item.id, :groupId => @formGroup.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% else %>
		<p>No items present</p>
	<% end %>
</div>
