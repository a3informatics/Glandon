<h3>Group <%= @formGroup.label %> <small>(<%= @form.identifier %>, V<%= @form.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
			<tr>
				<th>Ordinal</th>
				<th>Type</th>
				<th>Optional</th>
				<th>Repeating</th>
				<th>Note</th>
			</tr>
		</thead>
		<tbody>
			<tr>
		  	<td><%= @formGroup.ordinal%></td>
				<td><%= @formGroup.groupType%></td>
				<td><%= @formGroup.optional%></td>
				<td><%= @formGroup.repeating%></td>
				<td><%= @formGroup.note%></td>
			</tr>
		</tbody>
	</table>
	<h4>Sub Groups</h4>
	<% if @formGroup.groups.length > 0 %>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Ordinal</th>
				<th>Type</th>
				<th>Optional</th>
				<th>Repeating</th>
				<th>Note</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @formGroup.groups.each do |group| %>
				<tr>
					<td><%= group.ordinal%></td>
				  <td><%= group.groupType%></td>
				  <td><%= group.optional%></td>
				  <td><%= group.repeating%></td>
				  <td><%= group.note%></td>
					<td><%= link_to "Show", forms_group_path(:id => group.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<% else %>
		<p>No sub groups present</p>
	<% end %>
	<h4>Items</h4>
	<% if @formGroup.items.length > 0 %>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<% item = @formGroup.items[0] %>
			  		<% properties = item.properties %>
			  		<% properties.each do |property| %>
						<th><%= property[:label] %></th>
					<% end %>
					<td></td>
				</tr>
			</thead>
			<tbody>
				<% @formGroup.items.each do |item| %>
				<tr>
					<% properties = item.properties %>
			  		<% properties.each do |property| %>
						<td><%= property[:value] %></td>
					<% end %>
					<td><%= link_to "Show", forms_item_path(:id => item.id, :groupId => @formGroup.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<p>No items present</p>
	<% end %>
</div>
