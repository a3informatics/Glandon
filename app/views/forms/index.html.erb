<h1>Forms</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th></th>
	  </tr>
		<% @forms.each do |formId, form| %>
		  <tr>
		    <td><%= form.name %></td>
		    <td><%= link_to "Show", form_path(form.id), :class => "btn btn-primary" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New Form", new_form_path, :class => "btn btn-success" %>
	<%= link_to "New Placeholder Form", placeholder_new_forms_path, :class => "btn btn-success" %>
	<%= link_to "New Normal BC Form", bc_normal_new_forms_path, :class => "btn btn-success" %>
	<%= link_to "New Log Line BC Form", bc_log_new_forms_path, :class => "btn btn-success" %>
</div>
