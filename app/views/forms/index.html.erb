<%= javascript_include_tag 'shared/iso_managed/index_page', 'shared/index_panel' %>
<%= stylesheet_link_tag 'shared/datatables_loading' %>
<%= javascript_tag "var indexUrl = '#{forms_path}',
                        strict_param = 'form',
                        count = -1;" %>

<% first_level_breadcrumb (:forms) %>

<div class="row">
  <%= render partial: "shared/simple_header_tiny", :locals => {badge: "icon-forms",
    main_text: "Forms",
    sub_text: "Browse all Forms in the system." } %>
</div>

<div class="row">
	<div class="col-md-12 card wide">
      <div class="card-header">Index</div>
    <div class="card-content table-cardstyle">
			<div class="half-blocks-wrap">
				<div class="font-light half-block">
					Below is the list of all <span class="text-link font-regular">sponsor</span> owned Forms.
					Use the Search bar to find the Form you are looking for. <br/>
					To see its respective History page, click on 'History'.
				</div>
				<div class="actions-wrap half-block">
					<% if policy(Form).new? %>
          <a href="<%= new_form_path %>" class="btn medium green" id="new-form-button" data-toggle="modal">
            <span class="icon-plus text-tiny"></span>&nbsp;
            New Form
          </a>
					<% end %>
					<% if policy(Form).new? %>
						<a href="<%= placeholder_new_forms_path %>" class="btn medium light" id="new-placeholder-button" data-toggle="modal">
							<span class="icon-plus text-tiny"></span>&nbsp;
							New Placeholder
						</a>
					<% end %>
				</div>
			</div>
			<hr>
			<div class="table-width-wrapper">
	      <table id="index" class="table table-striped table-bordered table-condensed">
	        <thead>
	          <tr>
	            <th class="th-xsmall fit">Owner</th>
							<th class="th-medium fit">Identifier</th>
							<th>Label</th>
							<th class="fit"></th>
	          </tr>
	        </thead>
	        <tbody>
	        </tbody>
	      </table>
			</div>
		</div>
  </div>
</div>
