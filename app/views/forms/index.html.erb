<h3>Index: Forms</h3>
<div class="row">
	<div class="col-md-8">
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
		    	<th>Owner</th>
		    	<th>Identifier</th>
		    	<th>Label</th>
		    	<th></th>
		  	</tr>
			</thead>
			<tbody>
				<% @forms.each do |item| %>
					<tr>
				    	<td><%= item[:owner] %></td>
				    	<td><%= item[:identifier] %></td>
				    	<td><%= item[:label] %></td>
				    	<td><%= link_to "History", history_forms_path(:identifier => item[:identifier], :scope_id => item[:owner_id]), :class => "btn btn-primary btn-xs" %></td>
				  	</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="col-md-4">
		<div id="formInfo" class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">New Form</h3>
      </div>
      <div class="panel-body">
				<%= link_to "New", new_form_path, :class => "btn btn-success" %>
			</div>
		</div>
		<div id="formInfo" class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title">Quick Forms</h3>
      </div>
      <div class="panel-body">
				<%= link_to "New Placeholder", placeholder_new_forms_path, :class => "btn btn-success" %>
			</div>
		</div>
	</div>
</div>
