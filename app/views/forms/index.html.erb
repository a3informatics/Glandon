<h3>Index: Forms</h3>
<div class="col-md-6">
		<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Identifier</th>
		    	<th>Label</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @forms.each do |item| %>
				<tr>
			    	<td><%= item[:identifier] %></td>
			    	<td><%= item[:label] %></td>
			    	<td><%= link_to "History", history_forms_path(:identifier => item[:identifier]), :class => "btn btn-primary btn-xs" %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New", new_form_path, :class => "btn btn-success" %>
	<%= link_to "New Placeholder", placeholder_new_forms_path, :class => "btn btn-success" %>
	<%= link_to "New Normal BC", bc_normal_new_forms_path, :class => "btn btn-success" %>
	<%= link_to "New Log Line BC", bc_log_new_forms_path, :class => "btn btn-success" %>
</div>
