<div class="col-md-8" style="padding-right:20px; border-right: 1px solid #ccc;">
    <h3>CRF View</h3>
    <%= @form.crf.html_safe %>
</div>
<div class="col-md-4">
    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Form Details</h3>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-condensed">
                    <tbody>
                        <tr>
                            <td><strong>Identifier:</strong></td><td><%= @form.identifier %></td>
                        </tr>
                        <tr>
                            <td><strong>Version Label:</strong></td><td><%= @form.versionLabel %></td>
                        </tr>
                        <tr>
                            <td><strong>Version:</strong></td><td><%= @form.version %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <%= link_to "Close", view_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>
    <%= link_to "Edit", edit_thesauri_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>
</div>
