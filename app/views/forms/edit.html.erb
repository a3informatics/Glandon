<%= stylesheet_link_tag    'd3_local_v2', 'form_editor'%>
<%= javascript_include_tag 'd3_local_v2', 'form_editor', 'ajax_requests', 'form_utility', 'd3_editor', 'unload' %>
<% if Rails.env == "test" || Rails.env == "development" %>
	<%= javascript_include_tag 'rspec_helper' %>
<% end %>
<script id="formJson" type="text/json">
  <%= raw @form.to_operation.to_json %>
</script>
<form id="main_form">
	<div class="row">
	  <div class="col-md-7">
      <%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Edit:", :item => @form} %>
		  <div class="btn-group" role="group" aria-label="First group">
	      <button id="saving" type="button" class="btn btn-default">
	        <span class="glyphicon glyphicon-refresh"></span>
	      </button>
	      <button type="submit" id="save" class="btn btn-primary">Save</button>
	    </div>
	    <button type="button" id="close" class="btn btn-primary">Close</button>
	    <div id="d3">
        <!-- D3 Area -->
      </div>
	  </div>
	  <div class="col-md-5" >
	  	<%= render partial: "shared/formEditor"%>
		  <% if Rails.env == "test" || Rails.env == "development" %>
		    <div class="col-md-6" >
		      <div class="input-group">
		        <span class="input-group-btn">
		          <button type="button" id="click_node" class="btn btn-primary">N:</button>
		        </span>
		        <input type="text" class="form-control" id="click_node_text">
		      </div>
		    </div>
		    <div class="col-md-6" >
		      <div class="input-group">
		        <span class="input-group-btn">
		          <button type="button" id="test" class="btn btn-primary">T:</button>
		        </span>
		        <input type="text" class="form-control" id="test_text">
		      </div>
		    </div>
		  <% end %>
	  </div>
	</div>
</form>
<input type="hidden" id="token" value="<%= @token.id %>">
<input type="hidden" id="close_path" value="<%= @close_path %>">