<% content_for :page_title do %> <%= "Edit: #{@form.has_identifier.identifier} (#{@form.semantic_version}) "%> <% end %>

<%= javascript_pack_tag 'forms/edit' %>

<% third_level_breadcrumb(:forms, @form, @close_path) %>

<%= javascript_tag "let tokenTimerId = '#{@edit.token.id}',
                        tokenTimerWarning = '#{current_user.edit_lock_warning}';"%>

<div class="row">
  <%= render layout: "shared/headers/header_managed_item", :locals => { item: @form, badge: "icon-forms" } do %>

    <div class="actions-wrap">

      <%= render partial: "shared/buttons/ico_btn_secondary", :locals => { url: @crf_path, id: 'crf-button',
          icon: "icon-form-view", text: "CRF", new_tab: true } %>
      <%= render partial: "shared/buttons/ico_btn_secondary", :locals => { url: @acrf_path, id: 'acrf-button',
          icon: "icon-form-view", text: "aCRF", new_tab: true } %>

      <%= render partial: "shared/buttons/timeout" %>
      <%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>

      <%= render layout: "shared/context_menu/menu", :locals => { id: "header-con-menu", color: "blue", side: "left" } do %>
        <%= render partial: "shared/context_menu/menu_item", :locals => { url: @edit_tags_path, id: "edit-tags-button",
          icon: "icon-tag", text: "Edit tags", disabled: @edit_tags_path.empty?, new_tab: true } %>
      <% end %>

    </div>

  <% end %>
</div>

<div class="row">

  <%= render partial: "shared/forms/editor_card", :locals => { form: @form } %>

</div>
