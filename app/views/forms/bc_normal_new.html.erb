<h1>New Placeholder Form</h1>
<div class="col-md-10">
	<%= form_for @form, :url => bc_normal_create_forms_path do |f| %>
		<div class="form-group">
	    	<%= label_tag :shortName, "Identifier" %><br />
	    	<%= text_field_tag "form[shortName]" %>
	  	</div>
		<div class="form-group">
	    	<%= f.label :name, "Name" %><br />
	    	<%= f.text_field :name %>
	  	</div>
	  	<table class="table table-striped table-bordered table-condensed">
	  		<tr>
	    		<th>Biomedical Concept</th>
	  			<th>Select</th>
	  		</tr>
	  		<% @bcs.each do |bcId, bc| %>
		  		<tr>
		    		<td><%= bc.name %></td>
		    		<td><%= check_box_tag "form[bcs][]", bc.id %></td>
		  		</tr>
		  	<% end %>
		</table>
	  	<%= f.submit "Create", class: "btn btn-default btn-primary" %>
	<% end %>
</div>