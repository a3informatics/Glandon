<h3>New Biomedical Concept Form</h3>
<%= form_for @form, :url => bc_normal_create_forms_path do |f| %>
	<div class="row">
		<div class="col-md-3">
			<div class="form-group">
		    	<%= label_tag :itemType, "Item Type:" %><br />
		    	<input type="text" class="form-control" name="form[itemType]" id="form_itemType">
		  	</div>
			<div class="form-group">
		    	<%= f.label :identifier, "Identifier:" %><br />
		    	<input type="text" class="form-control" name="form[identifier]" id="form_identifier">
		  	</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
		  	<table id="main" class="table table-striped table-bordered table-condensed">
		  		<thead>
		  			<tr>
		    			<th>Identifer</th>
						<th>Label</th>
						<th>Owner</th>
						<th>Internal Version</th>
						<th>Version</th>
						<th>Select</th>
		  			</tr>
		  		</thead>
		  		<tbody>
		  			<% @bcs.each do |bcId, bc| %>
			  			<tr>
			    			<td><%= bc.identifier %></td>
							<td><%= bc.label %></td>
							<td><%= bc.owner %></td>
							<td><%= bc.version %></td>
							<td><%= bc.versionLabel %></td>
							<td><%= check_box_tag "form[bcs][]", [bc.id + "|" + bc.namespace] %></td>
			  			</tr>
			  		<% end %>
			  	</tbody>
			</table>
		</div>
	</div>
	<%= f.submit "Create", class: "btn btn-default btn-primary" %>
<% end %>