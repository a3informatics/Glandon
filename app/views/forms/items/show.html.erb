<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Item:", :item => @form} %>
<div class="col-md-12">
	<% if @formItem.itemType == Form::Item::C_BC %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Label</th>
			    <th>Question Text</th>
			    <th>Datatype</th>
			    <th>Format</th>
			    <th>Optional</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.label %></td>
			    <td><%= @formItem.qText %></td>
			    <td><%= @formItem.datatype %></td>
			    <td><%= @formItem.format %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= @formItem.note %></td>
			  </tr>
			</tbody>
		</table>
		<h4>Terminology</h4>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Identifier</th>
			    <th>Submission Value</th>
				</tr>
			</thead>
			<tbody>
				<% @formItem.bcValues.each do |bc_property_value| %>
				  <tr>
				  	<% cli = bc_property_value.cli %>
				    <td><%= cli.identifier %></td>
				    <td><%= cli.notation %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	<% elsif @formItem.itemType == Form::Item::C_QUESTION %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Label</th>
			    <th>Question Text</th>
			    <th>Datatype</th>
			    <th>Format</th>
			    <th>Mapping</th>
			    <th>Optional</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.label %></td>
			    <td><%= @formItem.qText %></td>
			    <td><%= @formItem.datatype %></td>
			    <td><%= @formItem.format %></td>
			    <td><%= @formItem.mapping %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= @formItem.note %></td>
			  </tr>
			</tbody>
		</table>
		<h4>Terminology</h4>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Identifier</th>
			    <th>Submission Value</th>
				</tr>
			</thead>
			<tbody>
				<% @formItem.q_values.each do |cl| %>
				  <tr>
				    <td><%= cl.identifier %></td>
				    <td><%= cl.notation %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Placeholder Text</th>
			    <th>Optional</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.freeText %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= @formItem.note %></td>
			  </tr>
			</tbody>
		</table>
	<% end %>
</div>



