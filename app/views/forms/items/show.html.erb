<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Item:", :item => @form} %>
<div class="col-md-12">
	<% if @formItem.rdf_type == "#{Form::Item::BcProperty::C_RDF_TYPE_URI}" %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Label</th>
			    <th>Question Text</th>
			    <th>Datatype</th>
			    <th>Format</th>
			    <th>Optional</th>
			    <th>Completion Instructions</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.label %></td>
			    <td><%= @property.qText %></td>
			    <td><%= @property.datatype %></td>
			    <td><%= @property.format %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.completion) %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.note) %></td>
			  </tr>
			</tbody>
		</table>
		<h4>Terminology</h4>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Identifier</th>
			    <th>Submission Value</th>
				</tr>
			</thead>
			<tbody>
				<% @tcs.each do |tc| %>
				  <tr>
				  	<td><%= tc.identifier %></td>
				    <td><%= tc.notation %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	<% elsif @formItem.rdf_type == "#{Form::Item::Question::C_RDF_TYPE_URI}" %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Label</th>
			    <th>Question Text</th>
			    <th>Datatype</th>
			    <th>Format</th>
			    <th>Mapping</th>
			    <th>Optional</th>
			    <th>Completion Instructions</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.label %></td>
			    <td><%= @formItem.question_text %></td>
			    <td><%= @formItem.datatype %></td>
			    <td><%= @formItem.format %></td>
			    <td><%= @formItem.mapping %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.completion) %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.note) %></td>
			  </tr>
			</tbody>
		</table>
		<h4>Terminology</h4>
		<table id="main" class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Identifier</th>
			    <th>Submission Value</th>
				</tr>
			</thead>
			<tbody>
				<% @tcs.each do |tc| %>
				  <tr>
				  	<td><%= tc.identifier %></td>
				    <td><%= tc.notation %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	<% elsif @formItem.rdf_type == "#{Form::Item::Placeholder::C_RDF_TYPE_URI}" %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Placeholder Text</th>
			    <th>Optional</th>
			    <th>Completion Instructions</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.freeText %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.completion) %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.note) %></td>
			  </tr>
			</tbody>
		</table>
	<% else %>
		<h4>Details</h4>
		<table class="table table-striped table-bordered table-condensed">
			<thead>
			  <tr>
			    <th>Ordinal</th>
			    <th>Label Text</th>
			    <th>Optional</th>
			    <th>Completion Instructions</th>
			    <th>Note</th>
				</tr>
			</thead>
			<tbody>
			  <tr>
			    <td><%= @formItem.ordinal %></td>
			    <td><%= @formItem.label_text %></td>
			    <td><%= @formItem.optional %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.completion) %></td>
			    <td><%= raw MarkdownEngine::render(@formItem.note) %></td>
			  </tr>
			</tbody>
		</table>
	<% end %>
</div>



