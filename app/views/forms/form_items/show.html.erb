<h3>Item <%= @formItem.label %> <small>(<%= @form.identifier %>, V<%= @form.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <% properties = @formItem.properties.all %>
		<% properties.each do |property| %>
			<th><%= property[:label] %></th>
		<% end %>
	  </tr>
	  <tr>
	    <% properties.each do |property| %>
			<td><%= property[:value] %></td>
		<% end %>
	  </tr>
	</table>
</div>
