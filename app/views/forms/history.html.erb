<%= javascript_tag 'setPageTitle("History: '+@identifier+'")' %>
<%= javascript_include_tag 'shared/iso_managed/history_page' %>
<%= javascript_tag "var history_data_path = '#{history_forms_path}',
 												url_rs_path = '#{iso_registration_states_v2_path("rs_id")}',
												strict_params = 'form',
												identifier = '#{@identifier}',
												scope_id = '#{@scope_id}';" %>

<% second_level_breadcrumb(:forms, @scope_id, @identifier) %>

<div class="row">
  <%= render layout: "shared/thesauri/simple_header_card", :locals => {badge: "icon-forms", item: @form, header_title: "Item History", with_tags: false} do %>
  <div class="actions-wrap">
      <%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: changes_iso_managed_index_path({iso_managed: {rdf_type: @form.rdf_type, child_property: "label", identifier: @identifier, scope_id: @scope_id}}),
          icon: "icon-history", id: "btn-version-history", btn_text: "Changes", dt_toggle: "", disabled: false}  %>
			<%= render partial: "shared/buttons/ico_btn_secondary", :locals => {link_path: @close_path, id: "close",
				icon: "icon-long-arrow", btn_text: "Return", dt_toggle: "", disabled: false } %>
    </div>
	<% end %>
</div>

<div class="row centered">
	<div class="col-md-11 card table-cardstyle">
		<%= render partial: "shared/history_panel", locals: {title: "Version History of '#{@identifier}'"} %>
	</div>
</div>
