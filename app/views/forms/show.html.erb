<h3>Form <%= @form.identifier %> <small>(<%= @form.owner %>, V<%= @form.managedItem.scopedIdentifier.version %>)</small></h3>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Identifer</th>
	    <th>Label</th>
	    <th>Version</th>
	    <th>Version Label</th>
	    <th>NS</th>
	  </tr>
	  <tr>
	    <td><%= @form.identifier %></td>
	    <td><%= @form.label %></td>
	    <td><%= @form.version %></td>
	    <td><%= @form.versionLabel %></td>
	    <td><%= @form.namespace %></td>
	  </tr>
	</table>
	<h4>Groups</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
			    <th>Name</th>
			    <th>Repeating</th>
			    <th>Optional</th>
			    <th>Note</th>
			    <th>Ordinal</th>
			    <th></th>
			</tr>
		</thead>
		<tbody>
			<% @form.groups.each do |id, group| %>
			  <tr>
			    <td><%= group.name %></td>
			    <td><%= group.repeating %></td>
			    <td><%= group.optional %></td>
			    <td><%= group.note %></td>
			    <td><%= group.ordinal %></td>
			    <td><%= link_to "Show", forms_form_group_path(:id => group.id, :formId => @form.id, :namespace => @form.namespace), :class => "btn btn-primary btn-xs" %></td>
			  </tr>
			<% end %>	
		</tbody>
	</table>
	<%= link_to "New Group", new_forms_form_group_path(@form.id), :class => "btn btn-success" %>
</div>
