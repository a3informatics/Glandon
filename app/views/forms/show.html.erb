<h1>Forms <%= @form.name %> <small>(CDISC, <%= @form.identifier %>, V<%= @form.version %>)</small></h1>
<div class="col-md-10">
	<h2>Details</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Identifer</th>
	    <th>Name</th>
	    <th>Version</th>
	  </tr>
	  <tr>
	    <td><%= @form.identifier %></td>
	    <td><%= @form.name %></td>
	    <td><%= @form.version %></td>
	  </tr>
	</table>
	<h2>Groups</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Repeating</th>
	    <th>Optional</th>
	    <th>Note</th>
	    <th>Ordinal</th>
	    <th></th>
	  </tr>
		<% @form.groups.each do |id, group| %>
		  <tr>
		    <td><%= group.name %></td>
		    <td><%= group.repeating %></td>
		    <td><%= group.optional %></td>
		    <td><%= group.note %></td>
		    <td><%= group.ordinal %></td>
		    <td><%= link_to "Show", forms_form_group_path(group.id,:form_id => @form.id), :class => "btn btn-primary" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New Group", new_forms_form_group_path(@form.id), :class => "btn btn-success" %>
</div>
