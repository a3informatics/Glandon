<%= javascript_include_tag 'form_show', 'ajax_requests', 'form_utility'%>
<script id="jsonData" type="text/json">
    <%= raw @form.to_operation.to_json %>
</script>
<%= render partial: "shared/stdInstanceTitle", :locals => {:title => "Show:", :item => @form} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Identifer</th>
	    <th>Label</th>
	    <th>Owner</th>
	    <th>Status</th>
	    <th>Version</th>
	    <th>Version Label</th>
	    <th></th>
	  </tr>
	  <tr>
	    <td><%= @form.identifier %></td>
	    <td><%= @form.label %></td>
	    <td><%= @form.owner %></td>
	    <td><%= @form.registrationState.registrationStatus %></td>
	    <td><%= @form.version %></td>
	    <td><%= @form.versionLabel %></td>
	    <td><%= link_to "Impact", impact_iso_managed_index_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-info btn-xs" %></td>
	  </tr>
	</table>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Completion Instructions</th>
	    <th>Notes</th>
	  </tr>
	  <tr>
	    <td><%= raw MarkdownEngine::render(@form.completion) %></td>
	    <td><%= raw MarkdownEngine::render(@form.note) %></td>
	  </tr>
	</table>
	<h4>Groups</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>Ordinal</th>
				<th>Label</th>
				<th>Question Text</th>
				<th>Datatype</th>
				<th>Format</th>
				<th>Mapping</th>
				<th>Terminology</th>
				<th></th>
				<th>Completion</th>
				<th>Note</th>
			</tr>
		</thead>
		<tbody>
		</tbody>
	</table>
	<%= link_to "Clone", clone_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-primary" %>
	<%= link_to "Export JSON", export_json_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-info" %>
	<%= link_to "Export Turtle", export_ttl_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-info" %>
	<%= link_to "Export ODM", export_odm_forms_path(:id => @form.id, :namespace => @form.namespace), :class => "btn btn-info" %>
</div>
