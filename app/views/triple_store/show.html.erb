<% uri = @triples.empty? ? "" : @triples.first[:subject] %>

<%= javascript_tag "setPageTitle('Triples: #{uri}')" %>
<%= javascript_include_tag 'standard_datatable' %>
<% first_level_breadcrumb (:triples) %>

<div class="row">
  <%= render partial: "shared/simple_header_tiny", :locals => {badge: "icon-triples",
    main_text: "Triples",
    sub_text: "Viewing raw database content of: <span class='font-regular'>#{uri}</span>".html_safe } %>
</div>

<div class="row centered">
  <div class="col-md-11 card wide">
    <div class="card-header">
      Show
    </div>
    <div class="card-content table-cardstyle all-columns">
    	<div class="table-width-wrapper">
        <table id="main" class="table table-striped table-bordered table-condensed">
          <thead>
            <tr>
              <th class="fit">Predicate</th>
    					<th class="fit">Object</th>
            </tr>
          </thead>
          <tbody>
            <% @triples.each do |triple| %>
              <tr>
                <td><%= triple[:predicate] %></td>
                <td>
                  <% if triple[:object].start_with?("http") %>
                    <%= link_to "#{triple[:object]}", triple_store_path(Uri.new(uri: triple[:object]).to_id) %>
                  <% else %>
                    <%= triple[:object] %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    	</div>
    </div>
  </div>
</div>
