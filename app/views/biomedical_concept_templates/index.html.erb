<%= javascript_include_tag 'standard_datatable' %>
<% first_level_breadcrumb (id_to_type('biomedical_concept_templates')) %>
<h3>Index: Biomedical Concept Templates</h3>
<div class="col-md-8">
		<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
		    	<th>Owner</th>
		    	<th>Identifier</th>
		    	<th>Label</th>
		    	<th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @bcts.each do |item| %>
				<tr>
			    	<td><%= item[:owner] %></td>
			    	<td><%= item[:identifier] %></td>
			    	<td><%= item[:label] %></td>
			    	<td><%= link_to "History", history_biomedical_concept_templates_path(:biomedical_concept_template => { :identifier => item[:identifier], 
              :scope_id => item[:scope_id]}), :class => "btn  btn-xs" %></td>
			  	</tr>
			<% end %>
		</tbody>
	</table>
</div>
