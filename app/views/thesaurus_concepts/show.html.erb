<%= render partial: "shared/stdChildTitle", :locals => {:title => "Show:", :label => @thesaurusConcept.label, :identifier => @thesaurusConcept.identifier} %>
<div class="col-md-12">
	<h4>Details</h4>
	<table class="table table-striped table-bordered table-condensed">
	  <thead>
			<tr>
			    <th>Label</th>
			    <th>Identifer</th>
			    <th>Notation</th>
			    <th>Preferred</th>
			    <th>Synonym</th>
			    <th>Definition</th>
			</tr>
		</thead>
		<tbody>
		  <tr>
		    <td><%= @thesaurusConcept.label %></td>
		    <td><%= @thesaurusConcept.identifier %></td>
		    <td><%= @thesaurusConcept.notation %></td>
		    <td><%= @thesaurusConcept.preferredTerm %></td>
		    <td><%= @thesaurusConcept.synonym %></td>
		    <td><%= @thesaurusConcept.definition %></td>
		  </tr>
		</tbody>
	</table>
	<h4>Child Concepts</h4>
	<table id="main" class="table table-striped table-bordered table-condensed">
	  	<thead>
			<tr>
			    <th>Label</th>
			    <th>Identifer</th>
			    <th>Notation</th>
			    <th>Preferred</th>
			    <th>Synonym</th>
			    <th>Definition</th>
			    <th></th>
			    <th></th>
			    <th></th>
		  	</tr>
		</thead>
		<tbody>
			<% @thesaurusConcept.children.each do |key, item| %>
			  <tr>
				    <td><%= item.label %></td>
				    <td><%= item.identifier %></td>
				    <td><%= item.notation %></td>
				    <td><%= item.preferredTerm %></td>
				    <td><%= item.synonym %></td>
				    <td><%= item.definition %></td>
				    <td><%= link_to "Show", thesaurus_concept_path(:id => item.id, :namespace => item.namespace), :class => "btn btn-primary btn-xs" %></td>
				    <td><%= link_to "Impact", impact_thesaurus_concepts_path(:id => item.id,  :namespace => item.namespace), :class => "btn btn-info btn-xs" %></td>
			        <td><%= link_to "Triples", view_dashboard_index_path(:id => item.id, :namespace => item.namespace), :class => "btn btn-warning btn-xs" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>