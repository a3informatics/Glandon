<%= stylesheet_link_tag    'spinner' %>
<%= javascript_include_tag 'thesauri_editor', 'unload', 'field_validation', 'spinner', 'token_timer' %>
<script id="json_data" type="text/json">
    <%= raw @thesaurus_concept.to_json.to_json %>
</script>
<div class="row">
  <div class="col-md-12">
    <h3>Edit: <%= @thesaurus_concept.label %> <small><%= @thesaurus_concept.identifier %></small></h3>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Label</th>
          <th>Identifer</th>
          <th>Submission Value</th>
          <th>Preferred Term</th>
          <th>Synonym(s)</th>
          <th>Definition</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @thesaurus_concept.label %></td>
          <td><%= @thesaurus_concept.identifier %></td>
          <td><%= @thesaurus_concept.notation %></td>
          <td><%= @thesaurus_concept.preferredTerm %></td>
          <td><%= @thesaurus_concept.synonym %></td>
          <td><%= @thesaurus_concept.definition %></td>
          <td><button type="button" id="referer_button" class="btn btn-primary btn-xs">Parent</button></td>
        </tr>
      </tbody>
    </table>
    <%= render partial: "shared/thesaurusConceptEditor" %>
  </div>
</div>
<input type="hidden" id="add_child_path" value="<%= add_child_thesaurus_concepts_path %>">
<input type="hidden" id="children_path" value="<%= children_thesaurus_concepts_path %>">
<input type="hidden" id="parameters_key" value="thesaurus_concept">
<input type="hidden" id="token_1" value="<%= @token.id %>">
<input type="hidden" id="warning_timeout" value="<%= current_user.edit_lock_warning %>">
<input type="hidden" id="close_path" value="<%= @close_path %>">
<input type="hidden" id="referer_path" value="<%= @referer_path %>">