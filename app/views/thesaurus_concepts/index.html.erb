<h1>Thesaurus Concept</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table class="table table-striped table-bordered table-condensed">
		  <tr>
		    <th>Identifier</th>
		    <th>Definition</th>
		    <th></th>
		  </tr>
			<% @thesaurusConcepts.each do |thesaurusConcept| %>
			  <tr>
			    <td><%= thesaurusConcept.identifier%></td>
			    <td><%= thesaurusConcept.definition%></td>
			    <td><%= link_to "Remove", thesaurus_concept_path(thesaurusConcept), method: :delete, data: { confirm: "Are you sure?" } %></td>
			  </tr>
			<% end %>
	</table>
	<%= link_to "New thesaurus Concept", new_thesaurus_concept_path, :class => "btn btn-success" %>
</div>