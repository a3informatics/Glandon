<% content_for :page_title do %> History <%= @identifier %> <% end %>

<%= javascript_pack_tag 'biomedical_concept_instances/history' %>

<% second_level_breadcrumb(:biomedical_concept_instances, @scope_id, @identifier) %>

<div class="row">
  <%= render layout: "shared/headers/header_item_simple", :locals => { badge: "icon-biocon", item: @item, header_title: "Item History" } do %>
    <div class="actions-wrap">
      <%= render partial: "shared/buttons/return", :locals => { url: @close_path } %>
    </div>
  <% end %>
</div>

<div class="row">
  <%= render partial: "shared/iso_managed/history/history_card", locals: {
        identifier: @identifier, url: history_biomedical_concept_instances_path({biomedical_concept_instance: {identifier: @identifier, scope_id: @scope_id}}) } %>
</div>
