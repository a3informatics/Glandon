<h1>CDISC Biomedical Concepts</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table id="main" class="table table-striped table-bordered table-condensed">
		<thead>			
			<tr>
				<th>Name</th>
				<th>Identifer</th>
				<th>Version</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @cdiscBcs.each do |bcId, bc| %>
				<tr>
					<td><%= bc.name %></td>
					<td><%= bc.identifier %></td>
					<td><%= bc.version %></td>
					<td><%= link_to "Show", cdisc_bc_path(bc.id), :class => "btn btn-primary" %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= link_to "New BC", new_cdisc_bc_path, :class => "btn btn-success" %>
</div>
