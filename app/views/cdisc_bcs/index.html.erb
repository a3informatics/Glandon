<h1>CDISC Biomedical Concepts</h1>
<div class="col-md-10">
	<h2>All Versions</h2>
	<table class="table table-striped table-bordered table-condensed">
	  <tr>
	    <th>Name</th>
	    <th>Identifer</th>
	    <th>Version</th>
	    <th></th>
	  </tr>
		<% @cdiscBcs.each do |bcId, bc| %>
		  <tr>
		    <td><%= bc.name %></td>
		    <td><%= bc.identifier %></td>
		    <td><%= bc.version %></td>
		    <td><%= link_to "Show", cdisc_bc_path(bc.id), :class => "btn btn-primary" %></td>
		  </tr>
		<% end %>
	</table>
	<%= link_to "New BC", new_cdisc_bc_path, :class => "btn btn-success" %>
</div>
