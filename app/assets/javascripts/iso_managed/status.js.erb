$(document).ready(function() {
  
$('#select_release').on('change', function() {
  var value = $(this).val();
  var data = { "iso_managed": { "sv_type": value } };
  $.ajax({
    url: url_release,
    type: 'PUT',
    dataType: 'json',
    data: JSON.stringify( data ),
    contentType: 'application/json',
    error: function (xhr, status, error) {
      var html = alertError("An error has occurred updating release.");
      displayAlerts(html);
    },
    success: function(result){
      location.reload();
    }
  });

});

});